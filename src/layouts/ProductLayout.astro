---
// layouts/ProductLayout.astro - SIMPLIFIED SEO
import { generateProductSchema } from "../utils/structureData";

const {
  product,
  additionalSchemas = [], // Only FAQPage from individual pages
  robots = "index, follow, max-image-preview:large",
} = Astro.props;

// ============================================================================
// SCHEMA GENERATION - Single @graph
// ============================================================================
const productSchemaData = generateProductSchema(product);
const productSchemaParsed = JSON.parse(productSchemaData);

// Merge additional schemas (FAQ) into main @graph
if (additionalSchemas.length > 0) {
  additionalSchemas.forEach((schema) => {
    productSchemaParsed["@graph"].push(schema);
  });
}

// Single JSON-LD output
const finalSchema = JSON.stringify(productSchemaParsed, null, 2);

// Extract data for meta tags (from @graph)
const productNode = productSchemaParsed["@graph"].find(
  (item) => item["@type"] === "Product"
);
const orgNode = productSchemaParsed["@graph"].find(
  (item) => item["@type"] === "Organization"
);

// ============================================================================
// HARDCODED CANONICAL URL
// ============================================================================
const canonical = `https://mdogomdogodeals.co.ke/${product.slug}`;

// ============================================================================
// KENYA-OPTIMIZED META TAGS
// ============================================================================
const title = `${product.name} Price in Kenya - From KES ${product.daily}/day | Lipa Mdogo Mdogo`;
const description = `Buy ${product.name} in Kenya with flexible Lipa Mdogo Mdogo payments. Pay KES ${product.deposit} deposit + KES ${product.daily}/day. Free delivery Nairobi. 2-year warranty. Shop now!`;
---

<!doctype html>
<html lang="en-KE">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- PRIMARY META - KENYA-OPTIMIZED -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <link rel="canonical" href={canonical} />

    <!-- OPEN GRAPH -->
    <meta property="og:type" content="product" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={productNode?.image?.[0]} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content={`${product.name} - ${product.brand}`}
    />
    <meta property="og:locale" content="en_KE" />
    <meta property="og:site_name" content={orgNode?.name} />

    <!-- PRODUCT META -->
    <meta
      property="product:price:amount"
      content={productNode?.offers?.price}
    />
    <meta property="product:price:currency" content="KES" />
    <meta property="product:availability" content="in stock" />
    <meta property="product:condition" content={product.condition || "new"} />
    <meta property="product:brand" content={product.brand} />

    <!-- TWITTER -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={productNode?.image?.[0]} />
    <meta
      name="twitter:image:alt"
      content={`${product.name} - ${product.brand}`}
    />

    <!-- MOBILE -->
    <meta name="theme-color" content="#f59e0b" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="MMD Kenya" />

    <!-- ICONS -->
    <link rel="icon" type="image/png" href="/phones/y2.png" />
    <link rel="apple-touch-icon" href="/phones/y2.png" />

    <!-- PERFORMANCE -->
    <link rel="preload" as="image" href={productNode?.image?.[0]} />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />

    <!-- SINGLE JSON-LD - ALL SCHEMAS IN ONE @GRAPH -->
    <script type="application/ld+json" set:html={finalSchema} />

    <meta name="generator" content={Astro.generator} />

    <slot name="head" />

    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        max-width: 100vw;
        overflow-x: hidden;
        background: #fef5e7;
      }

      * {
        box-sizing: border-box;
      }

      img {
        max-width: 100%;
        height: auto;
      }

      body {
        min-height: 100vh;
        font-display: swap;
      }

      .product-image {
        aspect-ratio: 1 / 1;
        object-fit: contain;
        background: #fff;
      }

      html {
        scroll-behavior: smooth;
      }
    </style>

    <!-- GOOGLE ANALYTICS -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4143W8VTJ3"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-4143W8VTJ3", {
        send_page_view: true,
        anonymize_ip: true,
      });

      // Enhanced ecommerce - view_item event
      gtag("event", "view_item", {
        currency: "KES",
        value: parseFloat(
          document.querySelector('meta[property="product:price:amount"]')
            ?.content || 0
        ),
        items: [
          {
            item_id: window.location.pathname.split("/").pop(),
            item_name: document.title.split("-")[0].trim(),
            item_brand:
              document.querySelector('meta[property="product:brand"]')
                ?.content || "",
            price: parseFloat(
              document.querySelector('meta[property="product:price:amount"]')
                ?.content || 0
            ),
          },
        ],
      });
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
