---
const {
  products = [],
  robots = "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1",
} = Astro.props;

// ============================================
// SINGLE SOURCE OF TRUTH: Define SEO HERE first
// ============================================
const baseUrl = "https://mdogomdogodeals.co.ke";

const seoData = {
  title: "Buy Phones on Lipa Mdogo Mdogo in Nairobi Kenya | Mdogo Mdogo Deals",

  description:
    "Get smartphones on flexible payment plans in Nairobi. Pay daily or weekly from KES 50. Samsung, iPhone, Tecno, Infinix available. Free delivery in Nairobi.",
  canonical: baseUrl,
  ogImage: `${baseUrl}/phones/hero.webp`,
  siteName: "Mdogo Mdogo Deals Kenya",
  organizationName: "Mdogo Mdogo Deals Kenya",
};

// ============================================
// SCHEMA: Pass seoData to generator so it CONFIRMS what's already defined
// ============================================
import { generateHomepageSchema } from "../utils/structureData";

const homepageSchema = generateHomepageSchema(products, seoData);
---

<!doctype html>
<html lang="en-KE">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Primary Meta Tags -->
    <title>{seoData.title}</title>
    <meta name="description" content={seoData.description} />
    <meta name="author" content={seoData.organizationName} />
    <meta name="robots" content={robots} />
    <link rel="canonical" href={seoData.canonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={seoData.canonical} />
    <meta property="og:title" content={seoData.title} />
    <meta property="og:description" content={seoData.description} />
    <meta property="og:image" content={seoData.ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Smartphones available on flexible payment plans"
    />
    <meta property="og:locale" content="en_KE" />
    <meta property="og:site_name" content={seoData.siteName} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={seoData.title} />
    <meta name="twitter:description" content={seoData.description} />
    <meta name="twitter:image" content={seoData.ogImage} />
    <meta
      name="twitter:image:alt"
      content="Smartphones available on flexible payment plans"
    />

    <!-- Mobile & Theme -->
    <meta name="theme-color" content="#f59e0b" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="MMD Kenya" />

    <!-- Favicon & Icons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/phones/y2.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/phones/y2.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/phones/y2.png" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Preconnect for Performance -->
    <link
      rel="preconnect"
      href="https://www.googletagmanager.com"
      crossorigin
    />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={homepageSchema} />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <slot name="head" />

    <style>
      :global(html),
      :global(body) {
        margin: 0;
        padding: 0;
        max-width: 100vw;
      }

      html,
      body {
        max-width: 100vw;
        overflow-x: hidden;
        background: #fef5e7;
      }

      :global(*) {
        box-sizing: border-box;
      }

      :global(img) {
        max-width: 100%;
        height: auto;
      }

      :global(body) {
        min-height: 100vh;
        font-display: swap;
      }

      :global(html) {
        scroll-behavior: smooth;
      }

      :global(.product-card) {
        contain: layout;
      }
    </style>

    <!-- Google Tag Manager -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4143W8VTJ3"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-4143W8VTJ3", {
        send_page_view: true,
        anonymize_ip: true,
        page_path: window.location.pathname,
      });
    </script>
  </head>
  <body>
    <a href="#main-content" class="sr-only focus:not-sr-only">
      Skip to main content
    </a>

    <main id="main-content">
      <slot />
    </main>
  </body>
</html>
