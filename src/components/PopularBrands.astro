---
// PopularBrands.astro
const brands = [
  {
    name: "Itel",
    icon: "/icons/itel.svg",
    link: "/itel",
    description: "Affordable Itel smartphones on installment plans",
  },
  {
    name: "Infinix",
    icon: "/icons/infinix.svg",
    link: "/infinix",
    description: "Infinix phones on credit with flexible payment options",
  },
  {
    name: "iPhone",
    icon: "/icons/iphone.svg",
    link: "/iphone",
    description: "Buy iPhone on lipa mdogo mdogo in Nairobi",
  },
  {
    name: "Oppo",
    icon: "/icons/oppo.svg",
    link: "/oppo",
    description: "Oppo smartphones with easy installment payments",
  },
  {
    name: "Samsung",
    icon: "/icons/samsung.svg",
    link: "/samsung",
    description: "Samsung phones on credit - lipa pole pole",
  },
  {
    name: "Tecno",
    icon: "/icons/tecno.svg",
    link: "/tecno",
    description: "Tecno mobile phones on affordable payment plans",
  },
  {
    name: "Vivo",
    icon: "/icons/vivo.svg",
    link: "/vivo",
    description: "Vivo smartphones available on credit in Kenya",
  },
];
---

<section class="popular-brands" aria-labelledby="brands-heading">
  <div class="container">
    <h2 id="brands-heading" class="section-title">
      Buy Phones on Lipa Mdogo Mdogo by Brand
    </h2>

    <nav
      class="carousel-wrapper"
      aria-label="Browse phone brands available on credit"
    >
      <ul class="carousel-track" role="list">
        {
          brands.map((brand) => (
            <li class="carousel-item">
              <a
                href={brand.link}
                class="brand-card"
                aria-label={`Shop ${brand.name} phones on lipa mdogo mdogo - ${brand.description}`}
              >
                <img
                  src={brand.icon}
                  alt={`${brand.name} logo`}
                  class="brand-logo"
                  loading="eager"
                  fetchpriority="high"
                />
                <span class="brand-name">{brand.name}</span>
                <span class="visually-hidden">{brand.description}</span>
              </a>
            </li>
          ))
        }

        {
          brands.map((brand) => (
            <li class="carousel-item" aria-hidden="true">
              <a
                href={brand.link}
                class="brand-card"
                tabindex="-1"
                aria-label={`Shop ${brand.name} phones`}
              >
                <img
                  src={brand.icon}
                  alt=""
                  class="brand-logo"
                  loading="lazy"
                />
                <span class="brand-name">{brand.name} Phones</span>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</section>

<style>
  .popular-brands {
    overflow: hidden;
    /* margin-bottom: -100px; */
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  .section-title {
    color: #111;
    text-align: center;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .carousel-wrapper {
    overflow: hidden;
    position: relative;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .carousel-track {
    display: flex;
    gap: 1.5rem;
    animation: scroll 80s linear infinite;
    width: max-content;
    will-change: transform;
    list-style: none;
    padding: 6px;
    margin: 0 0 2rem 0;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .carousel-item {
    display: contents;
  }

  .brand-card {
    /* background: #fff; */
    background: hsl(30, 11%, 96%);
    /* border: 1px solid #e0e0e0; */
    border: 0.1px solid #f59e0b;
    border-radius: 10px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.25s ease;
    cursor: pointer;
    min-width: 150px;
    height: 120px;
    text-decoration: none;
    flex-shrink: 0;
    z-index: 2;
  }

  .brand-card:hover,
  .brand-card:focus {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    z-index: 10;
    outline-offset: 2px;
  }

  .brand-logo {
    height: 45px;
    width: auto;
    object-fit: contain;
    margin-bottom: 0.75rem;
    filter: grayscale(0.2);
    transition: filter 0.3s ease;
  }

  .brand-card:hover .brand-logo,
  .brand-card:focus .brand-logo {
    filter: grayscale(0);
  }

  .brand-name {
    color: #333;
    margin: 0;
    display: block;
    font-size: 0.95rem;
    font-weight: 500;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  @media (min-width: 640px) {
    .brand-card {
      min-width: 180px;
    }
    .carousel-track {
      gap: 2rem;
    }
  }

  @media screen and (min-width: 0px) and (max-width: 800px) {
    .brand-card {
      width: 110px;
      min-width: 110px;
      height: 90px;
      padding: 1rem;
    }
    .brand-logo {
      height: 100px !important;
      width: 100px !important;
      font-size: 1000px !important;
      margin-bottom: 0.5rem;
    }
    .brand-name {
      font-size: 0.85rem;
      display: none;
    }
    .section-description {
      font-size: 0.9rem;
    }
  }

  @media (min-width: 1024px) {
    .carousel-track {
      gap: 2rem;
    }
    .brand-card {
      min-width: 200px;
      height: 130px;
    }
    .brand-logo {
      height: 50px;
    }
    .brand-name {
      font-size: 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .carousel-track {
      animation: scroll 120s linear infinite;
    }
  }
</style>
