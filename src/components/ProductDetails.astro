    }

    .info-phone {
      width: 80vw;
      height: 80vh;
   
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }

    

    .image-phone {
      overflow: hidden;
      height: 80vh;
      position: relative;
      cursor: crosshair;
      background: #f8f8f8;
      transition: all 0.3s ease;
    }

    .image-phone img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
      transform-origin: center;
    }

    .image-phone:hover img {
      transform: scale(2);
    }

    .image-phone::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.1);
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: none;
      z-index: 1;
    }

    .image-phone:hover::before {
      opacity: 1;
    }

    .phone-content{
        width:95%;
        height: 95%;
    }
    .phone-content .name-title{
        font-size: 18px;
        text-align: center;
    }
  .phone-content .price-content{
     font-size: 18px;
        text-align: center;
}


    .image-content{
        display: flex;
        justify-content: center;
        align-items: center;
       
    }

    .zoom-lens {
      position: absolute;
      width: 120px;
      height: 120px;
      border: 2px solid #fff;
      border-radius: 50%;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.2s ease;
      z-index: 2;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(1px);
    }

    .image-phone:hover .zoom-lens {
      opacity: 1;
    }

    .image-phone:hover {
      box-shadow: inset 0 0 100px rgba(0, 0, 0, 0.2);
      border: 2px solid rgba(255, 255, 255, 0.5);
    }

    @media (max-width: 768px) {
      .image-phone:hover img {
        transform: scale(1.5);
      }

      .zoom-lens {
        width: 80px;
        height: 80px;
      }
    }



