<style>
  /* ============================================================
     ALL STYLES SCOPED UNDER .fps__ PREFIX
     No global resets. No bare element selectors.
     Fully isolated — safe to use alongside any other component.
     ============================================================ */

  .fps__section {
    /* Block-level container — does NOT set overflow on itself.
       Overflow is contained within fps__viewport only. */
    display: block;
    width: 100%;
    box-sizing: border-box;
  }

  .fps__inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    box-sizing: border-box;
    /* No overflow property here — this lets the page scroll normally */
  }

  /* ---- Header ---- */
  .fps__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .fps__title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0;
    line-height: 1.2;
  }

  .fps__controls {
    display: flex;
    gap: 0.5rem;
  }

  .fps__btn {
    width: 44px;
    height: 44px;
    border: none;
    border-radius: 50%;
    background: #ffffff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: box-shadow 0.25s ease, transform 0.2s ease, background 0.2s ease;
    color: #333;
    flex-shrink: 0;
  }

  .fps__btn:hover {
    background: #f4f4f4;
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.16);
    transform: translateY(-2px);
  }

  .fps__btn:active {
    transform: translateY(0);
  }

  /* ---- Viewport: THE ONLY overflow:hidden in this component ---- */
  .fps__viewport {
    /* This is the clipping window. Period. Nothing else clips. */
    overflow: hidden;
    width: 100%;
    box-sizing: border-box;
  }

  /* ---- Track: the scrollable row of cards ---- */
  .fps__track {
    display: flex;
    gap: 1.25rem;
    transition: transform 0.45s cubic-bezier(0.4, 0, 0.2, 1);
    /* No width set here — width is driven by card sizes */
    will-change: transform;
    align-items: stretch;
  }

  /* ---- Card ---- */
  .fps__card {
    /*
      flex-shrink: 0 is critical — prevents cards from collapsing.
      Width is set via JS to match exactly one viewport width on mobile
      or a fixed 300px on desktop, ensuring no partial cards bleed out.
    */
    flex-shrink: 0;
    width: 300px; /* desktop default, overridden by JS on mobile */
    background: #ffffff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
  }

  .fps__card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.13);
  }

  /* ---- Image ---- */
  .fps__img-wrap {
    position: relative;
    width: 100%;
    height: 260px;
    background: linear-gradient(135deg, #f0f2f5 0%, #d4dde8 100%);
    overflow: hidden;
    flex-shrink: 0;
  }

  .fps__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .fps__card:hover .fps__img {
    transform: scale(1.04);
  }

  .fps__badge {
