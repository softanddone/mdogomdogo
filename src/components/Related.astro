<script>


document.addEventListener("contextmenu", e => e.preventDefault());

  document.addEventListener("dragstart", e => {
    if (e.target.tagName === "IMG") e.preventDefault();
  });



  // Namespaced to avoid any collision with other slider scripts on the page
  (function fpsSliderInit() {
    const section = document.querySelector('.fps__section');
    if (!section) return;

    const track      = section.querySelector('[data-fps-track]');
    const cards      = Array.from(section.querySelectorAll('[data-fps-card]'));
    const prevBtn    = section.querySelector('.fps__btn--prev');
    const nextBtn    = section.querySelector('.fps__btn--next');
    const dotsWrap   = section.querySelector('[data-fps-dots]');
    const viewport   = section.querySelector('.fps__viewport');

    if (!track || !cards.length || !dotsWrap || !viewport) return;

    const GAP           = 20;   // px — matches CSS gap (1.25rem ~ 20px)
    const AUTO_DELAY    = 4000; // ms
    const DESKTOP_W     = 300;  // px card width on desktop

    let currentIndex   = 0;
    let autoPlayTimer  = null;
    let isMobile       = false;

    // ------------------------------------------------------------------
    // Card sizing: on mobile each card = viewport width (minus inner padding).
    // On desktop cards are fixed 300px.
    // ------------------------------------------------------------------
    function getCardWidth() {
      return isMobile ? viewport.offsetWidth : DESKTOP_W;
    }

    function getStep() {
      // Mobile: 1 card at a time. Desktop: 1 card at a time.
      return 1;
    }

    function getMaxIndex() {
      return Math.max(0, cards.length - getVisibleCount());
    }

    function getVisibleCount() {
      if (isMobile) return 1;
      const vw = viewport.offsetWidth;
      return Math.max(1, Math.floor((vw + GAP) / (DESKTOP_W + GAP)));
    }

    function sizeCards() {
      const w = getCardWidth();
      cards.forEach(card => {
        card.style.width = w + 'px';
        card.style.minWidth = w + 'px';
      });
    }

    function detectMobile() {
      isMobile = window.innerWidth <= 768;
    }

    // ------------------------------------------------------------------
    // Dots
    // ------------------------------------------------------------------
    function buildDots() {
      dotsWrap.innerHTML = '';
      const total = cards.length;
      for (let i = 0; i < total; i++) {
        const dot = document.createElement('button');
        dot.className = 'fps__dot';
        dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
        dot.addEventListener('click', () => {
          goTo(i);
          resetAutoplay();
        });
        dotsWrap.appendChild(dot);
      }
      syncDots();
    }

    function syncDots() {
      const dots = dotsWrap.querySelectorAll('.fps__dot');
      dots.forEach((d, i) => {
        d.classList.toggle('fps__dot--active', i === currentIndex);
      });
    }

    // ------------------------------------------------------------------
    // Movement
    // ------------------------------------------------------------------
    function goTo(index) {
      const max = getMaxIndex();
      currentIndex = Math.max(0, Math.min(index, max));
      const cardW = getCardWidth();
      const offset = currentIndex * (cardW + GAP);
      track.style.transform = `translateX(-${offset}px)`;
      syncDots();
    }

    function next() {
      const max = getMaxIndex();
      goTo(currentIndex >= max ? 0 : currentIndex + 1);
    }

    function prev() {
      const max = getMaxIndex();
      goTo(currentIndex <= 0 ? max : currentIndex - 1);
    }

    // ------------------------------------------------------------------
    // Autoplay
    // ------------------------------------------------------------------
    function startAutoplay() {
      stopAutoplay();
      autoPlayTimer = setInterval(next, AUTO_DELAY);
    }

    function stopAutoplay() {
      if (autoPlayTimer) {
        clearInterval(autoPlayTimer);
        autoPlayTimer = null;
      }
    }

    function resetAutoplay() {
      stopAutoplay();
      startAutoplay();
    }

    // ------------------------------------------------------------------
    // Touch / swipe
    // ------------------------------------------------------------------
    let touchStartX = 0;
    let touchStartY = 0;
    let isSwiping   = false;

    track.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].clientX;
      touchStartY = e.changedTouches[0].clientY;
      isSwiping = true;
      stopAutoplay();
    }, { passive: true });

    track.addEventListener('touchmove', (e) => {
      if (!isSwiping) return;
      // If scrolling vertically more than horizontally, cancel swipe to let page scroll
      const dx = Math.abs(e.changedTouches[0].clientX - touchStartX);
      const dy = Math.abs(e.changedTouches[0].clientY - touchStartY);
      if (dy > dx) {
        isSwiping = false;
      }
    }, { passive: true });

    track.addEventListener('touchend', (e) => {
      if (!isSwiping) { startAutoplay(); return; }
      const dx = e.changedTouches[0].clientX - touchStartX;
      if (Math.abs(dx) > 40) {
        dx < 0 ? next() : prev();
      }
      isSwiping = false;
      startAutoplay();
    }, { passive: true });

    // ------------------------------------------------------------------
    // Button events
    // ------------------------------------------------------------------
    prevBtn?.addEventListener('click', () => { prev(); resetAutoplay(); });
    nextBtn?.addEventListener('click', () => { next(); resetAutoplay(); });

    // Pause autoplay on hover (desktop)
    viewport.addEventListener('mouseenter', stopAutoplay);
    viewport.addEventListener('mouseleave', startAutoplay);

    // ------------------------------------------------------------------
    // Resize handling — debounced
    // ------------------------------------------------------------------
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        detectMobile();
        sizeCards();
        // Re-clamp currentIndex in case visible count changed
        const max = getMaxIndex();
        if (currentIndex > max) currentIndex = max;
        goTo(currentIndex);
        buildDots();
      }, 150);
    });

    // ------------------------------------------------------------------
    // Init
    // ------------------------------------------------------------------
    detectMobile();
    sizeCards();
    buildDots();
    goTo(0);
    startAutoplay();
  })();
</script>