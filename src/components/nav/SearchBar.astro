---
interface Props {
  id: string;
  placeholderId: string;
  resultsId: string;
  mobile?: boolean;
}

const { id, placeholderId, resultsId, mobile = false } = Astro.props;
const containerClass = mobile
  ? "search-container search-mobile"
  : "search-container";
---

<div class={containerClass} role="search">
  <label for={id} class="visually-hidden"
    >Search phones on credit - Lipa Mdogo Mdogo</label
  >
  <div class="search-input-wrapper">
    <input
      type="search"
      class="search-input"
      id={id}
      name="q"
      placeholder=" "
      aria-label="Search for phones on credit in Nairobi"
      autocomplete="off"
      aria-autocomplete="list"
      aria-controls={resultsId}
    />
    <span class="fake-placeholder" id={placeholderId}
      >Search phones on Credit...</span
    >
  </div>
  <button
    class="search-btn"
    id={mobile ? "searchBtnMobile" : "searchBtn"}
    aria-label="Search lipa mdogo mdogo phones"
  >
    <svg
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      aria-hidden="true"
      focusable="false"
    >
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
  </button>
  <div
    class="search-results"
    id={resultsId}
    role="listbox"
    aria-label="Search results"
  >
  </div>
</div>
