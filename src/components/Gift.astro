<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, sans-serif;
    background: #f8f9fa;
  }

  .anniversary-banner {
    background: linear-gradient(135deg, #f5f1e8 0%, #faf8f3 100%);
    position: relative;
    overflow: hidden;
    /* padding: 0.75rem 1.5rem; */
    border-bottom: 1px solid #e8dcc8;
    background: #f59e0b;
  }

  .banner-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .left-section {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .von-text {
    font-size: 1.2rem;
    font-weight: 800;
    color: #1a1a1a;
    letter-spacing: 0.5px;
  }

  .tagline {
    font-size: 0.7rem;
    color: #2d5a4a;
    font-weight: 600;
  }

  .anniversary-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .anniversary-content {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .year {
    font-size: 0.9rem;
    font-weight: 700;
    color: #c85a3f;
  }

  .anniversary-text {
    font-size: 0.9rem;
    font-weight: 800;
    color: #1a1a1a;
  }

  .quality-badge {
    background: linear-gradient(135deg, #2d5a4a 0%, #3a6d5a 100%);
    border-radius: 4px;
    padding: 0.25rem 0.6rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 6px rgba(45, 90, 74, 0.25);
  }

  .badge-text {
    font-size: 0.65rem;
    font-weight: 700;
    color: #ffffff;
    white-space: nowrap;
  }

  .right-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .swahili-pill {
    background: linear-gradient(135deg, #c85a3f 0%, #d4734f 100%);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 700;
    white-space: nowrap;
    box-shadow: 0 2px 8px rgba(200, 90, 63, 0.3);
  }

  .discount-badge {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    border-radius: 8px;
    padding: 0.5rem 0.9rem;
    display: flex;
    align-items: baseline;
    gap: 0.3rem;
    color: #ffffff;
    box-shadow: 0 3px 12px rgba(0, 0, 0, 0.2);
    flex-shrink: 0;
  }

  .up-to {
    font-size: 0.6rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #f5f1e8;
  }

  .percentage {
    font-size: 1.4rem;
    font-weight: 900;
    line-height: 1;
    color: #ffd700;
  }

  .off {
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #f5f1e8;
  }

  @media (max-width: 968px) {
    .banner-content {
      gap: 1rem;
    }

    .left-section {
      gap: 1rem;
    }

    .von-text {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .anniversary-banner {
      padding: 0.6rem 1rem;
    }

    .banner-content {
      gap: 0.8rem;
    }

    .left-section {
      gap: 0.8rem;
    }

    .von-text {
      font-size: 1rem;
    }

    .tagline {
      font-size: 0.65rem;
    }

    .year,
    .anniversary-text {
      font-size: 0.8rem;
    }

    .badge-text {
      font-size: 0.6rem;
    }

    .percentage {
      font-size: 1.2rem;
    }

    .swahili-pill {
      font-size: 0.65rem;
      padding: 0.25rem 0.7rem;
    }
  }

  @media (max-width: 480px) {
    .swahili-pill {
      display: none;
    }

    .anniversary-section {
      display: none;
    }

    .right-section {
      gap: 0.5rem;
    }
  }
</style>

<div class="anniversary-banner">
  <div class="banner-content">
    <div class="left-section">
      <div class="logo-section">
        <span class="von-text">Mdogo Mdogo Deals</span>
        <span class="tagline">â€¢ Upgrade your phone today</span>
      </div>

      <div class="anniversary-section">
        <div class="quality-badge">
          <span class="badge-text">Samsung & Tecno</span>
        </div>
        <div class="anniversary-content">
          <span class="year">Black Friday</span>
          <span class="anniversary-text">Deals</span>
        </div>
      </div>
    </div>

    <div class="right-section">
      <div class="swahili-pill">Limited Time Sale</div>
      <div class="discount-badge">
        <span class="up-to">Up to</span>
        <span class="percentage">45%</span>
        <span class="off">OFF</span>
      </div>
    </div>
  </div>
</div>
