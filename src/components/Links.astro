<style>
  .linkscontainer {
    width: 90vw;
    height: 70px;
    display: flex; /* switched from grid to flex */
    justify-content: space-between; /* left + right */
    align-items: center;
    padding: 0 5%;
    box-sizing: border-box;
    position: sticky;
    top: 0;
    z-index: 100;
    /* background: yellow !important; */
  }

  /* Left Section */
  .allcategoriesitems {
    display: flex;
    gap: 25px;
  }

  .allcategoriesitems a,
  .mobilemenu a {
    text-decoration: none;
    font-size: 18px;
    font-weight: 500;
    color: #333;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Helvetica, Arial, sans-serif;
    position: relative;
    transition: color 0.3s ease;
  }

  .allcategoriesitems a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 0;
    height: 2px;
    background: #0070f3;
    transition: width 0.3s ease;
  }

  .allcategoriesitems a:hover {
    color: #0070f3;
  }

  .allcategoriesitems a:hover::after {
    width: 100%;
  }

  /* Right Section */
  .links {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 25px;
  }

  .links a {
    text-decoration: none;
    font-size: 18px;
    font-weight: 500;
    color: #444;
    position: relative;
    transition: color 0.3s ease;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Helvetica, Arial, sans-serif;
  }

  .links a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 0;
    height: 2px;
    background: #ff5722;
    transition: width 0.3s ease;
  }

  .links a:hover {
    color: #ff5722;
  }

  .links a:hover::after {
    width: 100%;
  }

  /* Cart */
  .cart {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40px;
    position: relative;
    font-size: 24px;
    cursor: pointer;
  }

  .cart-img {
    width: 30px;
    height: 30px;
  }

  .cart-img img {
    max-height: 100%;
    width: auto;
    object-fit: contain;
  }

  .badge {
    position: absolute;
    top: -6px;
    right: -10px;
    background: #ff5722;
    color: #fff;
    font-size: 12px;
    font-weight: bold;
    border-radius: 50%;
    padding: 3px 6px;
    line-height: 1;
  }

  /* Menu Icon */
  .menuicon {
    font-size: 24px;
    cursor: pointer;
    padding: 2px 4px;
    border-radius: 8px;
    transition: all 0.3s ease;
    display: none;
    user-select: none;
    color: #0070f3;
  }

  .menuicon:hover {
    background: rgba(0, 112, 243, 0.15);
    transform: scale(1.05);
  }

  .menuicon:active {
    transform: scale(0.95);
  }

  /* Mobile Menu */
  .mobilemenu {
    position: fixed;
    top: 70px;
    right: -280px;
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
    width: 260px;
    min-height: calc(100vh - 70px);
    display: flex;
    flex-direction: column;
    padding: 30px 25px;
    gap: 8px;
    z-index: 200;
    transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobilemenu.open {
    right: 0;
    top: 70px;
  }

  /* Mobile Menu Links */
  .mobilemenu a {
    display: block;
    padding: 16px 20px;
    margin: 4px 0;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(0, 112, 243, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .mobilemenu a::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 112, 243, 0.1),
      transparent
    );
    transition: left 0.5s ease;
  }

  .mobilemenu a:hover::before {
    left: 100%;
  }

  .mobilemenu a:hover {
    background: rgba(0, 112, 243, 0.05);
    border-color: rgba(0, 112, 243, 0.3);
    transform: translateX(8px);
    box-shadow: 0 4px 12px rgba(0, 112, 243, 0.15);
  }

  .mobilemenu a:active {
    transform: translateX(4px) scale(0.98);
  }

  /* Backdrop for mobile menu */
  .menu-backdrop {
    position: fixed;
    top: 70px;
    left: 0;
    width: 100%;
    height: calc(100vh - 70px);
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(4px);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 150;
  }

  .menu-backdrop.active {
    opacity: 1;
    visibility: visible;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .desktop-menu {
      display: none;
    }

    .menuicon {
      display: block;
    }

    .linkscontainer {
      height: 65px;
      padding: 0 3%;
    }
  }

  @media (max-width: 480px) {
    .mobilemenu {
      width: 240px;
      right: -260px;
      padding: 25px 20px;
    }

    .mobilemenu a {
      padding: 14px 18px;
      font-size: 16px;
    }
  }
</style>

