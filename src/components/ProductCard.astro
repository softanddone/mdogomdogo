---
const { name, image, source, from, deposit, totalPrice, discount, display, slug, slugs, index } = Astro.props;
---

<style is:inline>
  :root {
    --first-color: #fdfaf5;
    --accent-color: #b07f31;
    --dark-color: #1c1c1c;
    --body-font: "Open Sans";
    --h3-font-size: 1rem;
    --normal-font-size: 0.938rem;
    --smaller-font-size: 0.75rem;
    --success-color: #2e7d32;
    --text-secondary: #424242;
    --border-light: #e0e0e0;
    --discount-bg: #d32f2f;
    --discount-text: #ffffff;
    --hot-bg: #e65100;
    --hot-text: #ffffff;
    /* Touch target specifications */
    --touch-target-min: 48px;
    --touch-spacing-min: 8px;
  }

  @media screen and (min-width: 768px) {
    :root {
      --normal-font-size: 1rem;
      --smaller-font-size: 0.813rem;
    }
  }

  .phonename {
    color: var(--dark-color) !important;
    margin-left: 40px;
    position: absolute;
    top: -25%;
    font-size: 18px;
    font-weight: 600;
  }

  .taginfo {
    position: relative;
    width: 100%;
  }

  /* FIXED: Complete restructure of button container for proper touch targets */
  .orderdiv {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: var(--touch-spacing-min);
    margin-top: 16px;
    padding: 0 8px;
  }

  /* FIXED: Make button links the full touch target - no nested buttons */
  .orderdiv a {
    display: block;
    background: var(--accent-color);
    color: white;
    text-decoration: none;
    padding: 16px 20px;
    min-height: var(--touch-target-min);
    min-width: 100%;
    border-radius: 5px;
    font-weight: 600;
    font-size: 14px;
    text-align: center;
    transition: background-color 0.3s ease;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--touch-spacing-min);
  }

  .orderdiv a:hover {
    background: #8b5a1f;
  }

  .orderdiv a:focus {
    outline: 3px solid #333;
    outline-offset: 2px;
  }

  /* FIXED: Style the "More Info" button differently */
  .orderdiv a.more-info-link {
    background: var(--first-color) !important;
    color: var(--dark-color) !important;
    border: 2px solid var(--accent-color) !important;
    font-weight: 600 !important;
  }

  .orderdiv a.more-info-link:hover {
    background: var(--accent-color) !important;
    color: white !important;
  }

  /* Remove the old button styles as we're using links directly now */
  .displaybutton {
    display: none; /* Hide any remaining button elements */
  }

  * {
    box-sizing: border-box;
  }

  body {
    background-color: #fff;
    color: var(--dark-color);
    font-family: var(--body-font);
  }

  img {
    max-width: 100%;
    height: auto;
    object-fit: cover;
  }

  a {
    text-decoration: none;
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem 2rem 4rem 2rem;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    background-color: var(--first-color);
    width: 300px;
    border: 1px solid var(--border-light);
  }

  .card__img {
    width: 200px;
    padding: 3rem 0;
    transition: transform 0.3s ease;
    height: 300px;
    position: relative;
    display: flex;
  }

  .card__img .lebo1 {
    position: absolute;
    top: 60px;
    left: -20px;
    width: 55px;
    height: 20px;
    background: #c62828 !important;
    border-radius: 20px;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  }

  .card__img .lebo2 {
    position: absolute;
    top: 90px;
    left: -20px;
    width: 55px;
    height: 20px;
    background: #d84315 !important;
    border-radius: 20px;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  }

  .card__img .lebo1 h4,
  .card__img .lebo2 h4,
  .card .card__img .lebo1 h4,
  .card .card__img .lebo2 h4,
  h4.hot {
    font-size: 13px !important;
    z-index: 20;
    color: #ffffff !important;
    background: transparent !important;
    font-weight: 800 !important;
    padding: 5px;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5) !important;
    letter-spacing: 0.5px !important;
  }

  .card__name {
    position: absolute;
    left: 0;
    bottom: -3.6rem;
    width: 100%;
    height: auto; /* CHANGED: Allow flexible height */
    min-height: 8rem;
    display: flex;
    align-items: flex-start; /* CHANGED: Align to top */
    justify-content: center;
    color: var(--dark-color);
    font-weight: bold;
    font-size: var(--smaller-font-size);
    transition: bottom 0.3s ease;
    z-index: 10;
    flex-direction: column;
    background: white;
    border-radius: 1rem 1rem 0 0;
    padding: 16px 12px; /* ADDED: Internal padding */
  }

  .card__name p {
    color: var(--success-color);
    font-weight: 600;
  }

  /* FIXED: Proper touch targets for icon buttons with adequate spacing */
  .card__icon {
    font-size: 1.5rem;
    color: var(--text-secondary);
    transition: color 0.2s ease, transform 0.2s ease;
    padding: 12px;
    min-width: var(--touch-target-min);
    min-height: var(--touch-target-min);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: var(--touch-spacing-min) auto; /* FIXED: Center and add spacing */
    position: relative;
    background-color: transparent;
    border: 2px solid transparent; /* Invisible border for focus */
  }

  .card__icon:hover {
    color: var(--accent-color);
    transform: scale(1.1);
    background-color: rgba(176, 127, 49, 0.1);
  }

  .card__icon:focus {
    outline: 3px solid var(--accent-color);
    outline-offset: 2px;
    border-color: var(--accent-color);
  }

  /* FIXED: Ensure icon container has proper spacing */
  .icon-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--touch-spacing-min);
    width: 100%;
    margin: 12px 0;
  }

  .card__precis {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center; /* CHANGED: Center align all content */
    margin-top: -50px;
    background: white;
  }

  .card__preci {
    display: block;
    text-align: center;
  }

  .card__preci--before {
    font-size: var(--smaller-font-size);
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
    text-decoration: line-through;
    font-weight: 600;
    margin-left: -125px;
    margin-top: 10px;
    font-size: 16px;
  }

  .card__preci--now,
  .card .card__preci--now,
  span.card__preci.card__preci--now {
    font-size: var(--h3-font-size);
    font-weight: 800 !important;
    color: #8b5a1f !important;
    margin-left: -63px;
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.8) !important;
  }

  .pfon {
    margin: 12px 0;
    color: #2e7d32 !important;
    text-align: center;
    width: 100%;
  }

  .statusitem,
  .pfon .statusitem,
  span.statusitem {
    color: #1b5e20 !important;
    font-weight: 700 !important;
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.8) !important;
  }

  .tick-icon,
  .statusitem .tick-icon,
  i.fa.fa-check.tick-icon {
    color: #1b5e20 !important;
    margin-right: 5px;
    font-weight: 900 !important;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .card:hover .card__img {
    transform: translateY(-5px);
  }

  .card:hover .card__name {
    bottom: 0;
  }

  /* Mobile-specific improvements */
  @media screen and (max-width: 767px) {
    /* FIXED: Even larger touch targets on mobile */
    .card__icon {
      min-width: 56px;
      min-height: 56px;
      padding: 16px;
      margin: 12px auto;
    }

    .orderdiv a {
      min-height: 56px;
      padding: 18px 24px;
      font-size: 16px;
      margin-bottom: 12px;
    }

    .orderdiv {
      gap: 12px;
      margin-top: 20px;
      padding: 0 12px;
    }

    /* Increase card height to accommodate larger buttons */
    .card__name {
      min-height: 10rem;
      padding: 20px 16px;
    }

    .card {
      padding-bottom: 5rem; /* More space for expanded content */
    }

    .card__img .lebo1,
    .card__img .lebo2 {
      background-color: #1a1a1a !important;
    }
    
    .card__img .lebo1 h4,
    .card__img .lebo2 h4,
    h4.hot,
    .hot {
      color: #ffffff !important;
      font-weight: 900 !important;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8) !important;
    }

    .card__preci--now,
    span.card__preci.card__preci--now {
      color: #6d4c41 !important;
      font-weight: 900 !important;
    }

    .statusitem,
    span.statusitem,
    .pfon .statusitem {
      color: #0d5016 !important;
      font-weight: 800 !important;
    }

    .tick-icon,
    i.fa.fa-check.tick-icon {
      color: #0d5016 !important;
    }
  }

  /* Tablet adjustments */
  @media screen and (min-width: 768px) and (max-width: 1024px) {
    .orderdiv a {
      min-height: 52px;
      padding: 16px 22px;
      font-size: 15px;
    }

    .card__icon {
      min-width: 52px;
      min-height: 52px;
      padding: 14px;
    }
  }

  /* Additional accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .card,
    .card__img,
    .card__name,
    .card__icon,
    .orderdiv a {
      transition: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .card__icon {
      border: 2px solid currentColor;
    }

    .orderdiv a {
      border: 2px solid currentColor;
    }
  }

  /* Additional high-specificity overrides */
  .card .card__name .card__precis .taginfo .phonename,
  .card .card__name .card__precis .pfon .statusitem,
  .card .card__name .card__precis .taginfo .card__preci--now,
  .card .card__name .card__precis .taginfo .card__preci--before {
    color: inherit !important;
  }

  .lebo2 h4.hot,
  .card__img .lebo2 h4.hot,
  div.lebo2 h4.hot,
  .hot {
    color: #ffffff !important;
    background-color: transparent !important;
    font-weight: 800 !important;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7) !important;
  }

  .lebo1 h4,
  .card__img .lebo1 h4,
  div.lebo1 h4 {
    color: #ffffff !important;
    background-color: transparent !important;
    font-weight: 800 !important;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7) !important;
  }
</style>

<article class="card">
  <div class="card__img">
    <div class="lebo1"><h4>{discount}</h4></div>

    <div class="lebo2" style={`display: ${display};`}>
      <h4 class="hot" style={`display: ${display};`}>Hot</h4>
    </div>

    <img
      src={source}
      alt=""
      width="200"
      height="300"
      fetchpriority={index === 0 ? "high" : undefined}
    />
  </div>

  <div class="card__name">
    <div class="card__precis">
      <!-- FIXED: Icon container with proper spacing -->
      <div class="icon-container">
        <a href="" class="card__icon" aria-label="Add to wishlist">
          <ion-icon name="heart-outline"></ion-icon>
        </a>
      </div>

      <div class="taginfo">
        <h1 class="phonename">{name}</h1>
        <span class="card__preci card__preci--before">{from}</span>
        <span class="card__preci card__preci--now">Deposit {deposit}</span>
      </div>

      <div class="pfon">
        <span class="statusitem">
          <i class="fa fa-check tick-icon" aria-hidden="true"></i>
          In stock
        </span>
      </div>

      <!-- FIXED: Icon container with proper spacing -->
      <div class="icon-container">
        <a href="" class="card__icon" aria-label="Add to cart">
          <ion-icon name="cart-outline"></ion-icon>
        </a>
      </div>
    </div>

    <!-- FIXED: Simplified button structure - no nested buttons, just styled links -->
    <div class="orderdiv">
      <a href={`/checkout/${slugs}`} aria-label={`Order ${name} now`}>
        Order Now
      </a>
      
      <a href={`/products/${slug}`} class="more-info-link" aria-label={`View more information about ${name}`}>
        More Info
      </a>
    </div>
  </div>
</article>