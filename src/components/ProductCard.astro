---
const { name, image, deposit, totalPrice } = Astro.props;
---
<div class="card">
  <img src={image} alt={name} class="product-img" />
  <h2>{name}</h2>
  <p><strong>Deposit:</strong> {deposit}</p>
  <p><strong>Total Price:</strong> {totalPrice}</p>
  <a href="https://wa.me/254700000000" class="btn">Lipa Mdogo Mdogo</a>
</div>

<style>
  .card {
    background: #fff;
    border: 1px solid #ddd;
    padding: 1rem;
    text-align: center;
    border-radius: 10px;
  }
  .product-img {
    max-width: 100%;
    border-radius: 5px;
  }
  .btn {
    background: green;
    color: white;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 5px;
    display: inline-block;
    margin-top: 1rem;
  }
</style>
