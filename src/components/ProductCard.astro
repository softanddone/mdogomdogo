---
const { name, image, source, from, deposit, totalPrice, discount, display, slug, slugs, index } = Astro.props;
---

<style is:inline>
  :root {
    --first-color: #fdfaf5;
    --accent-color: #b07f31;
    --dark-color: #1c1c1c;
    --body-font: "Open Sans";
    --h3-font-size: 1rem;
    --normal-font-size: 0.938rem;
    --smaller-font-size: 0.75rem;
    --success-color: #2e7d32; /* Darker green for better contrast */
    --text-secondary: #424242; /* Darker gray for better contrast */
    --border-light: #e0e0e0;
    /* New variables for improved contrast */
    --discount-bg: #d32f2f; /* Darker red background */
    --discount-text: #ffffff; /* White text for maximum contrast */
    --hot-bg: #e65100; /* Darker orange background */
    --hot-text: #ffffff; /* White text for maximum contrast */
  }

  @media screen and (min-width: 768px) {
    :root {
      --normal-font-size: 1rem;
      --smaller-font-size: 0.813rem;
    }
  }

  .phonename {
    color: var(--dark-color) !important;
    margin-left: 40px;
    position: absolute;
    top: -25%;
    font-size: 18px;
    font-weight: 600; /* Bolder font weight for better visibility */
  }

  .taginfo {
    position: relative;
    width: 100%;
  }

  .orderdiv {
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-around;
  }

  .orderdiv button {
    background: var(--accent-color);
    padding: 10px 30px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    color: white;
    font-weight: 600; /* Bolder for better readability */
    transition: background-color 0.3s ease;
  }

  .orderdiv button:hover {
    background: #8b5a1f; /* Darker hover state for better contrast */
  }

  * {
    box-sizing: border-box;
  }

  .more-info {
    background: var(--first-color) !important;
    color: var(--dark-color) !important;
    border: 2px solid var(--accent-color) !important;
    font-weight: 600 !important; /* Bolder text */
  }

  .more-info:hover {
    background: var(--accent-color) !important;
    color: white !important;
  }

  body {
    background-color: #fff;
    color: var(--dark-color);
    font-family: var(--body-font);
  }

  img {
    max-width: 100%;
    height: auto;
    object-fit: cover;
  }

  a {
    text-decoration: none;
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem 2rem 4rem 2rem;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    background-color: var(--first-color);
    width: 300px;
    border: 1px solid var(--border-light);
  }

  .card__img {
    width: 200px;
    padding: 3rem 0;
    transition: transform 0.3s ease;
    height: 300px;
    position: relative;
    display: flex;
  }

  /* Fixed discount label with high contrast - using explicit colors */
  .card__img .lebo1 {
    position: absolute;
    top: 60px;
    left: -20px;
    width: 55px;
    height: 20px;
    background: #c62828 !important; /* Dark red background - explicit and important */
    border-radius: 20px;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff !important; /* Pure white text - explicit and important */
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4); /* Stronger shadow for definition */
  }

  /* Fixed "Hot" badge with high contrast - using explicit colors */
  .card__img .lebo2 {
    position: absolute;
    top: 90px;
    left: -20px;
    width: 55px;
    height: 20px;
    background: #d84315 !important; /* Dark orange background - explicit and important */
    border-radius: 20px;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff !important; /* Pure white text - explicit and important */
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4); /* Stronger shadow for definition */
  }

  /* Enhanced text styling for badges with maximum specificity - UPDATED FOR SPAN */
  .card__img .lebo1 span,
  .card__img .lebo2 span,
  .card .card__img .lebo1 span,
  .card .card__img .lebo2 span,
  span.hot {
    font-size: 13px !important;
    z-index: 20;
    color: #ffffff !important; /* Pure white - explicit and important */
    background: transparent !important;
    font-weight: 800 !important; /* Extra bold font weight */
    padding: 5px;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5) !important; /* Strong text shadow for definition */
    letter-spacing: 0.5px !important; /* Better letter spacing for readability */
    display: block; /* Ensure proper display */
  }

  .card__name {
    position: absolute;
    left: 0;
    bottom: -3.6rem;
    width: 100%;
    height: 8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--dark-color);
    font-weight: bold;
    font-size: var(--smaller-font-size);
    transition: bottom 0.3s ease;
    z-index: 10;
    flex-direction: column;
    background: white;
    border-radius: 1rem 1rem 0 0;
  }

  .card__name p {
    color: var(--success-color);
    font-weight: 600; /* Bolder for better visibility */
  }

  .card__icon {
    font-size: 1.5rem;
    color: var(--text-secondary);
    transition: color 0.2s ease, transform 0.2s ease;
    padding: 0.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card__icon:hover {
    color: var(--accent-color);
    transform: scale(1.1);
  }

  .card__precis {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-top: -50px;
    background: white;
  }

  .card__preci {
    display: block;
    text-align: center;
  }

  .card__preci--before {
    font-size: var(--smaller-font-size);
    color: var(--text-secondary); /* Better contrast gray */
    margin-bottom: 0.25rem;
    text-decoration: line-through;
    font-weight: 600; /* Bolder for better visibility */
    margin-left: -125px;
    margin-top: 10px;
    font-size: 16px;
  }

  /* Price/deposit text with high contrast */
  .card__preci--now,
  .card .card__preci--now,
  span.card__preci.card__preci--now {
    font-size: var(--h3-font-size);
    font-weight: 800 !important; /* Extra bold for price visibility */
    color: #8b5a1f !important; /* Darker brown/gold for better contrast */
    margin-left: -63px;
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.8) !important; /* Light text shadow on white background */
  }

  .pfon {
    margin-left: 40px;
    color: #2e7d32 !important; /* Dark green for better contrast */
  }

  /* Stock status with high contrast */
  .statusitem,
  .pfon .statusitem,
  span.statusitem {
    color: #1b5e20 !important; /* Very dark green for maximum contrast */
    font-weight: 700 !important; /* Extra bold font weight */
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.8) !important; /* Light text shadow for definition */
  }

  .tick-icon,
  .statusitem .tick-icon,
  i.fa.fa-check.tick-icon {
    color: #1b5e20 !important; /* Very dark green for maximum contrast */
    margin-right: 5px;
    font-weight: 900 !important; /* Maximum font weight */
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .card:hover .card__img {
    transform: translateY(-5px);
  }

  .card:hover .card__name {
    bottom: 0;
  }

  /* Additional accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .card,
    .card__img,
    .card__name,
    .card__icon {
      transition: none;
    }
  }

  /* Additional high-specificity overrides to ensure contrast fixes are applied */
  .card .card__name .card__precis .taginfo .phonename,
  .card .card__name .card__precis .pfon .statusitem,
  .card .card__name .card__precis .taginfo .card__preci--now,
  .card .card__name .card__precis .taginfo .card__preci--before {
    color: inherit !important;
  }

  /* Ensure Hot badge text is always white with maximum contrast - UPDATED FOR SPAN */
  .lebo2 span.hot,
  .card__img .lebo2 span.hot,
  div.lebo2 span.hot,
  .hot {
    color: #ffffff !important;
    background-color: transparent !important;
    font-weight: 800 !important;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7) !important;
  }

  /* Ensure discount text is always white with maximum contrast - UPDATED FOR SPAN */
  .lebo1 span,
  .card__img .lebo1 span,
  div.lebo1 span {
    color: #ffffff !important;
    background-color: transparent !important;
    font-weight: 800 !important;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7) !important;
  }

  /* Mobile-specific overrides - UPDATED FOR SPAN */
  @media screen and (max-width: 767px) {
    .card__img .lebo1,
    .card__img .lebo2 {
      background-color: #1a1a1a !important; /* Very dark background for mobile */
    }
    
    .card__img .lebo1 span,
    .card__img .lebo2 span,
    span.hot,
    .hot {
      color: #ffffff !important;
      font-weight: 900 !important;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8) !important;
    }

    .card__preci--now,
    span.card__preci.card__preci--now {
      color: #6d4c41 !important; /* Very dark brown for mobile */
      font-weight: 900 !important;
    }

    .statusitem,
    span.statusitem,
    .pfon .statusitem {
      color: #0d5016 !important; /* Very dark green for mobile */
      font-weight: 800 !important;
    }

    .tick-icon,
    i.fa.fa-check.tick-icon {
      color: #0d5016 !important;
    }
  }

  /* Screen reader only text for better accessibility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<article class="card">
  <!-- Product image link with descriptive text -->
  <a href={`/products/${slug}`} class="card__img" aria-label={`View ${name} product details`}>
    <div class="lebo1"><span>{discount}</span></div>

    <div class="lebo2" style={`display: ${display};`}>
      <span class="hot" style={`display: ${display};`}>Hot</span>
    </div>

    <img
      src={source}
      alt={`${name} product image`}
      width="200"
      height="300"
      fetchpriority={index === 0 ? "high" : undefined}
    />
  </a>

  <div class="card__name">
    <div class="card__precis">
      <!-- Wishlist link with descriptive text -->
      <a href={`/wishlist/add/${slug}`} class="card__icon" aria-label={`Add ${name} to wishlist`}>
        <ion-icon name="heart-outline" aria-hidden="true"></ion-icon>
        <span class="sr-only">Add {name} to wishlist</span>
      </a>

      <div class="taginfo">
        <!-- Product name link with descriptive text -->
        <a href={`/products/${slug}`} aria-label={`View ${name} details`}>
          <h1 class="phonename">{name}</h1>
        </a>
        <span class="card__preci card__preci--before">{from}</span>
        <span class="card__preci card__preci--now">Deposit {deposit}</span>
      </div>

      <div class="pfon">
        <span class="statusitem">
          <i class="fa fa-check tick-icon" aria-hidden="true"></i>
          In stock
        </span>
      </div>

      <!-- Cart link with descriptive text -->
      <a href={`/cart/add/${slug}`} class="card__icon" aria-label={`Add ${name} to shopping cart`}>
        <ion-icon name="cart-outline" aria-hidden="true"></ion-icon>
        <span class="sr-only">Add {name} to cart</span>
      </a>
    </div>

    <div class="orderdiv">
      <!-- Order now link with descriptive text -->
      <a href={`/checkout/${slugs}`} aria-label={`Order ${name} now - Deposit ${deposit}`}>
        <button class="displaybutton">Order Now</button>
      </a>

      <!-- More info link with descriptive text -->
      <a href={`/products/${slug}`} aria-label={`View detailed information about ${name}`} class="displaybutton more-info">
       {name} Details
      </a>
    </div>
  </div>
</article>