---
const { name, image, source, from, deposit, totalPrice, discount, display, slug, slugs, index } = Astro.props;
---

<style is:inline>
  :root {
    /* Amazon-accurate accessible color palette - predominantly white/light */
    --primary-bg: #ffffff;
    --secondary-bg: #fafafa;
    --accent-primary: #ff9900;
    --accent-hover: #e88b00;
    --accent-light: #fff8f0;
    --accent-secondary: #0066c0;
    --accent-secondary-hover: #004d99;
    --text-primary: #0f1111;
    --text-secondary: #565959;
    --text-muted: #6f7373;
    --success-color: #067d62;
    --success-light: #f0f9ff;
    --error-color: #b12704;
    --error-light: #fff8f6;
    --warning-color: #b12704;
    --warning-light: #fff8f5;
    --border-subtle: #e7e7e7;
    --border-medium: #d5d9d9;
    --surface-white: #ffffff;
    --surface-elevated: #ffffff;
    --shadow-sm: 0 2px 5px 0 rgba(213, 217, 217, 0.5);
    --shadow-md: 0 2px 5px 0 rgba(213, 217, 217, 0.5), 0 1px 1px 0 rgba(0, 15, 17, 0.08);
    --shadow-lg: 0 4px 8px 0 rgba(213, 217, 217, 0.5), 0 6px 20px 0 rgba(213, 217, 217, 0.2);
    --shadow-focus: 0 0 0 3px rgba(255, 153, 0, 0.3);
    
    /* Typography scale */
    --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 0.9375rem;
    --font-size-lg: 1rem;
    --font-size-xl: 1.125rem;
    --font-size-2xl: 1.25rem;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    
    /* Spacing scale */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    
    /* Border radius scale */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    
    /* Transitions */
    --transition: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  * {
    box-sizing: border-box;
  }

  /* Card container with improved accessibility */
  .product-card {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 280px;
    background: var(--surface-white);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition);
    cursor: pointer;
    /* Improved contrast ratio */
    box-shadow: var(--shadow-sm);
  }

  .product-card:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-lg);
    border-color: var(--border-medium);
  }

  /* Image section with better accessibility */
  .product-image {
    position: relative;
    width: 100%;
    height: 240px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--surface-white);
    transition: transform var(--transition);
    /* Focus indicator for image link */
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
    border-bottom: 1px solid var(--border-subtle);
  }

  .product-image:focus-visible {
    outline: 2px solid var(--accent-secondary);
    outline-offset: 2px;
  }

  .product-card:hover .product-image {
    transform: scale(1.01);
  }

  .product-image img {
    width: 160px;
    height: 160px;
    object-fit: contain;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.1));
    transition: filter var(--transition);
  }

  .product-card:hover .product-image img {
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.15));
  }

  /* Accessible badges with proper contrast */
  .discount-badge {
    position: absolute;
    top: var(--space-4);
    left: var(--space-4);
    background: var(--error-color);
    color: white;
    border-radius: var(--radius-md);
    padding: var(--space-1) var(--space-3);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    letter-spacing: 0.025em;
    z-index: 10;
    /* Ensure 4.5:1 contrast ratio */
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .hot-badge {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    background: var(--warning-color);
    color: white;
    border-radius: var(--radius-md);
    padding: var(--space-1) var(--space-3);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    letter-spacing: 0.025em;
    z-index: 10;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  /* Content area with improved spacing */
  .product-info {
    padding: var(--space-6);
    background: var(--surface-white);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  /* Header section */
  .product-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-3);
  }

  .product-title {
    flex: 1;
    margin: 0;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    line-height: 1.4;
    letter-spacing: -0.01em;
  }

  .product-title a {
    color: inherit;
    transition: color var(--transition);
    text-decoration: none;
    /* Better focus indicator */
    border-radius: var(--radius-sm);
    padding: var(--space-1);
    margin: calc(-1 * var(--space-1));
  }

  .product-title a:hover {
    color: var(--accent-secondary);
  }

  .product-title a:focus-visible {
    outline: 2px solid var(--accent-secondary);
    outline-offset: 2px;
    background: var(--accent-light);
  }

  /* Improved wishlist button with accessibility */
  .wishlist-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid var(--border-medium);
    border-radius: var(--radius-md);
    background: var(--surface-white);
    color: var(--text-muted);
    transition: all var(--transition);
    flex-shrink: 0;
    text-decoration: none;
  }

  .wishlist-btn:hover {
    background: var(--error-light);
    color: var(--error-color);
    border-color: var(--error-color);
    transform: scale(1.05);
  }

  .wishlist-btn:focus-visible {
    outline: 2px solid var(--accent-secondary);
    outline-offset: 2px;
  }

  /* Pricing section with better hierarchy */
  .product-pricing {
    display: flex;
    align-items: baseline;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .deposit-price {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--error-color);
    letter-spacing: -0.02em;
  }

  .original-price {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    text-decoration: line-through;
    font-weight: var(--font-weight-medium);
  }

  /* Stock indicator with better visual hierarchy */
  .stock-status {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    color: var(--success-color);
    font-weight: var(--font-weight-medium);
    background: var(--success-light);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    width: fit-content;
  }

  .stock-icon {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--success-color);
    flex-shrink: 0;
  }

  /* Action buttons with improved accessibility */
  .product-actions {
    display: flex;
    gap: var(--space-3);
    margin-top: auto;
    padding-top: var(--space-2);
  }

  /* Primary CTA button */
  .order-btn {
    flex: 1;
    background: var(--accent-primary);
    color: var(--text-primary);
    border: 1px solid var(--accent-hover);
    border-radius: var(--radius-md);
    padding: var(--space-4) var(--space-6);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    font-family: inherit;
    cursor: pointer;
    transition: all var(--transition);
    min-height: 48px;
    letter-spacing: -0.01em;
    position: relative;
    /* Improved focus indicator */
    outline: none;
  }

  .order-btn:hover {
    background: var(--accent-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .order-btn:focus-visible {
    box-shadow: var(--shadow-focus), var(--shadow-md);
  }

  .order-btn:active {
    transform: translateY(0);
  }

  /* Secondary action button */
  .cart-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--surface-white);
    border: 1px solid var(--border-medium);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    transition: all var(--transition);
    flex-shrink: 0;
    cursor: pointer;
  }

  .cart-btn:hover {
    background: var(--accent-light);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: scale(1.05);
  }

  .cart-btn:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
  }

  /* Screen reader only content */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .product-card {
      border-width: 2px;
    }
    
    .order-btn,
    .cart-btn,
    .wishlist-btn {
      border-width: 2px;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition: none !important;
    }
    
    .product-card:hover {
      transform: none;
    }
    
    .product-card:hover .product-image {
      transform: none;
    }

    .wishlist-btn:hover,
    .cart-btn:hover {
      transform: none;
    }
  }

  /* Mobile optimizations */
  @media screen and (max-width: 767px) {
    .product-card {
      width: 100%;
      max-width: 320px;
    }

    .product-image {
      height: 220px;
    }

    .product-image img {
      width: 140px;
      height: 140px;
    }

    .product-info {
      padding: var(--space-5);
      gap: var(--space-3);
    }

    .product-title {
      font-size: var(--font-size-base);
    }

    .deposit-price {
      font-size: var(--font-size-xl);
    }

    /* Larger touch targets for mobile */
    .order-btn,
    .cart-btn,
    .wishlist-btn {
      min-height: 44px;
      min-width: 44px;
    }
  }

  /* Print styles */
  @media print {
    .product-card {
      break-inside: avoid;
      box-shadow: none;
      border: 1px solid var(--border-medium);
    }

    .wishlist-btn,
    .cart-btn,
    .order-btn {
      display: none;
    }

    .product-card:hover {
      transform: none;
    }
  }

  /* Remove dark mode since Amazon doesn't use it */
  /* Amazon maintains consistent light theme across all platforms */
</style>

<article class="product-card" role="article" aria-labelledby="product-title-${slug}">
  <a 
    href={`/products/${slug}`} 
    class="product-image" 
    aria-label={`View ${name} product details`}
    role="img"
  >
    {discount && (
      <div class="discount-badge"  aria-label={`${discount} discount`}>
        <span>{discount}</span>
      </div>
    )}

    {display !== 'none' && (
      <div class="hot-badge"  aria-label="Hot item" style={`display: ${display};`}>
        <span>Hot</span>
      </div>
    )}

    <img
      src={source}
      alt={`${name} - Product image`}
      width="160"
      height="160"
      fetchpriority={index === 0 ? "high" : undefined}
      loading={index === 0 ? undefined : "lazy"}
    />
  </a>

  <div class="product-info">
    <header class="product-header">
      <h2 class="product-title" id={`product-title-${slug}`}>
        <a href={`/products/${slug}`} aria-describedby={`product-price-${slug}`}>
          {name}
        </a>
      </h2>
      
      <a 
        href={`/wishlist/add/${slug}`} 
        class="wishlist-btn" 
        aria-label={`Add ${name} to wishlist`}
        role="button"
      >
        <svg 
          width="20" 
          height="20" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2"
          aria-hidden="true"
        >
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
        <span class="sr-only">Add to wishlist</span>
      </a>
    </header>

    <div class="product-pricing" id={`product-price-${slug}`}>
      <span class="deposit-price" aria-label={`Deposit amount: ${deposit}`}>
        Deposit {deposit}
      </span>
      {totalPrice && totalPrice !== deposit && (
        <span class="original-price" aria-label={`Original price: ${totalPrice}`}>
          {totalPrice}
        </span>
      )}
    </div>

    <div class="stock-status" role="status" aria-live="polite">
      <div class="stock-icon" aria-hidden="true"></div>
      <span>In stock</span>
    </div>

    <div class="product-actions">
      <button 
        class="cart-btn" 
        type="button" 
        aria-label={`Add ${name} to cart`}
        title="Add to cart"
      >
        <svg 
          width="20" 
          height="20" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2"
          aria-hidden="true"
        >
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="m1 1 4 4 10 0 2 11-14 0"></path>
        </svg>
        <span class="sr-only">Add to cart</span>
      </button>

      <a 
        href={`/checkout/${slugs}`} 
        style="flex: 1;" 
        aria-label={`Order ${name} now with deposit ${deposit}`}
      >
        <button class="order-btn" type="button">
          Order Now
        </button>
      </a>
    </div>
  </div>
</article>