---
// Complete E-commerce Hero Section with Real Features
const featuredDeals = [
  {
    name: "iPhone 15 Pro Max",
    original: 189999,
    price: 159999,
    monthly: 5333,
    image:
      "https://images.unsplash.com/photo-1695048133142-1a20484d2569?w=600&q=80",
    rating: 4.8,
    reviews: 234,
    badge: "Best Seller",
  },
  {
    name: "Samsung Galaxy S24 Ultra",
    original: 149999,
    price: 129999,
    monthly: 4333,
    image:
      "https://images.unsplash.com/photo-1610945415295-d9bbf067e59c?w=600&q=80",
    rating: 4.7,
    reviews: 189,
    badge: "Hot Deal",
  },
  {
    name: "Google Pixel 8 Pro",
    original: 119999,
    price: 99999,
    monthly: 3333,
    image:
      "https://images.unsplash.com/photo-1598327105666-5b89351aff97?w=600&q=80",
    rating: 4.6,
    reviews: 156,
    badge: "New",
  },
  {
    name: "OnePlus 12",
    original: 89999,
    price: 74999,
    monthly: 2500,
    image:
      "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?w=600&q=80",
    rating: 4.5,
    reviews: 142,
    badge: "20% Off",
  },
];

const categories = [
  "All Phones",
  "iPhone",
  "Samsung",
  "Budget Phones",
  "Flagship",
  "Accessories",
];

function formatPrice(price) {
  return new Intl.NumberFormat("en-KE", {
    style: "currency",
    currency: "KES",
    minimumFractionDigits: 0,
  }).format(price);
}
---

<section class="hero-banner">
  <div class="promo-strip">
    <div class="promo-content">
      <span
        >ðŸŽ‰ Flash Sale! Up to 30% OFF on Selected Phones | Free Delivery in
        Nairobi | Pay in 3-12 Months</span
      >
    </div>
  </div>

  <div class="container">
    <div class="search-section">
      <div class="search-bar">
        <svg
          class="search-icon"
          width="20"
          height="20"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input
          type="search"
          placeholder="Search for phones, brands, or models..."
        />
        <button class="search-btn">Search</button>
      </div>

      <div class="category-pills">
        {categories.map((cat) => <button class="category-pill">{cat}</button>)}
      </div>
    </div>

    <div class="deals-grid">
      {
        featuredDeals.map((phone, i) => (
          <article class="product-card" style={`animation-delay: ${i * 0.1}s`}>
            <div class="badge">{phone.badge}</div>

            <div class="image-container">
              <img
                src={phone.image}
                alt={`${phone.name} - Buy on installment in Nairobi Kenya`}
                loading={i < 2 ? "eager" : "lazy"}
              />
              <button class="wishlist-btn" aria-label="Add to wishlist">
                <svg
                  width="20"
                  height="20"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  />
                </svg>
              </button>
            </div>

            <div class="product-info">
              <h3>{phone.name}</h3>

              <div class="rating">
                <div class="stars">
                  {"â˜…".repeat(Math.floor(phone.rating))}
                  {"â˜†".repeat(5 - Math.floor(phone.rating))}
                </div>
                <span class="review-count">({phone.reviews})</span>
              </div>

              <div class="pricing">
                <span class="original-price">
                  {formatPrice(phone.original)}
                </span>
                <span class="current-price">{formatPrice(phone.price)}</span>
                <span class="discount">
                  -{Math.round((1 - phone.price / phone.original) * 100)}%
                </span>
              </div>

              <div class="installment">
                <span class="label">or {formatPrice(phone.monthly)}/month</span>
              </div>

              <div class="shipping-info">
                <svg
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  />
                </svg>
                <span>Free delivery</span>
              </div>

              <button class="add-to-cart">Add to Cart</button>
            </div>
          </article>
        ))
      }
    </div>

    <div class="trust-section">
      <div class="trust-item">
        <svg
          width="24"
          height="24"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
          ></path>
        </svg>
        <div>
          <strong>Secure Payment</strong>
          <p>100% protected</p>
        </div>
      </div>
      <div class="trust-item">
        <svg
          width="24"
          height="24"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <strong>Fast Delivery</strong>
          <p>Same day in Nairobi</p>
        </div>
      </div>
      <div class="trust-item">
        <svg
          width="24"
          height="24"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
          ></path>
        </svg>
        <div>
          <strong>Easy Returns</strong>
          <p>7-day return policy</p>
        </div>
      </div>
      <div class="trust-item">
        <svg
          width="24"
          height="24"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
          ></path>
        </svg>
        <div>
          <strong>Flexible Payment</strong>
          <p>Pay in installments</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .promo-strip {
    background: linear-gradient(90deg, #ff6b6b 0%, #ee5a6f 100%);
    color: white;
    padding: 0.75rem;
    text-align: center;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .promo-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-banner {
    background: #f8f9fa;
    padding-bottom: 3rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .search-section {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    margin-bottom: 2rem;
  }

  .search-bar {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    background: #f5f5f5;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border: 2px solid transparent;
    transition: all 0.3s;
  }

  .search-bar:focus-within {
    border-color: #667eea;
    background: white;
  }

  .search-icon {
    color: #666;
  }

  .search-bar input {
    flex: 1;
    border: none;
    background: transparent;
    font-size: 1rem;
    outline: none;
  }

  .search-btn {
    background: #667eea;
    color: white;
    border: none;
    padding: 0.6rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
  }

  .search-btn:hover {
    background: #5568d3;
  }

  .category-pills {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .category-pill {
    padding: 0.5rem 1rem;
    border: 1px solid #ddd;
    border-radius: 20px;
    background: white;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.3s;
  }

  .category-pill:hover {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  .deals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
    animation: fadeInUp 0.5s ease-out backwards;
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #ff6b6b;
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    z-index: 1;
  }

  .image-container {
    position: relative;
    height: 280px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .product-card:hover .image-container img {
    transform: scale(1.05);
  }

  .wishlist-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    background: white;
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .wishlist-btn:hover {
    background: #ff6b6b;
    color: white;
  }

  .wishlist-btn svg {
    stroke: currentColor;
  }

  .product-info {
    padding: 1.25rem;
  }

  .product-info h3 {
    font-size: 1.05rem;
    margin-bottom: 0.75rem;
    color: #333;
    font-weight: 600;
    line-height: 1.3;
  }

  .rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .stars {
    color: #ffa500;
    font-size: 0.9rem;
  }

  .review-count {
    font-size: 0.85rem;
    color: #666;
  }

  .pricing {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 0.9rem;
  }

  .current-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #333;
  }

  .discount {
    background: #dcfce7;
    color: #16a34a;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .installment {
    margin-bottom: 0.75rem;
  }

  .installment .label {
    color: #667eea;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .shipping-info {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    margin-bottom: 1rem;
    color: #16a34a;
    font-size: 0.85rem;
  }

  .add-to-cart {
    width: 100%;
    background: #667eea;
    color: white;
    border: none;
    padding: 0.85rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    font-size: 0.95rem;
  }

  .add-to-cart:hover {
    background: #5568d3;
    transform: translateY(-2px);
  }

  .trust-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .trust-item svg {
    color: #667eea;
    flex-shrink: 0;
  }

  .trust-item strong {
    display: block;
    color: #333;
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
  }

  .trust-item p {
    color: #666;
    font-size: 0.85rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .deals-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 1rem;
    }

    .image-container {
      height: 200px;
    }

    .product-info h3 {
      font-size: 0.95rem;
    }

    .current-price {
      font-size: 1.2rem;
    }

    .trust-section {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
