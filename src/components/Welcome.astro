---
import ProductCard from "./ProductCard.astro";
import { products } from "../data/product2.js";
import ShopBy from "./ShopBy.astro";
import CarouselProducts from "./CarouselProducts.astro";
import Latest from "./Latest.astro";
import ListedProducts from "./ListedPoducts.astro";
---

<style is:inline>
  :root {
    --dark-color: #161616;
    --accent-color: #ff5151;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .main {
    padding: 2rem 0;
    margin-top: 40px;
  }

  .smartphones {
    text-align: center;
    font-size: 20px;
    margin-bottom: -50px;
  }

  .item {
    padding: 10px;
  }

  .set {
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 20px;
  }

  @media (max-width: 1024px) {
    .set {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 768px) {
    .set {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media screen and (min-width: 1200px) {
    .set {
      grid-template-columns: repeat(5, 1fr);
      padding: 100px;
    }
  }

  /* ===============================
     PREMIUM FLOATING CONTACT BUTTONS
     =============================== */

  .floating-actions {
    position: fixed;
    bottom: 24px;
    right: 24px;
    display: flex;
    flex-direction: column;
    gap: 14px;
    z-index: 9999;
  }

  .fab {
    position: relative;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 24px;
    text-decoration: none;
    box-shadow:
      0 10px 25px rgba(0, 0, 0, 0.25),
      0 6px 10px rgba(0, 0, 0, 0.15);
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
  }

  .fab:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow:
      0 18px 35px rgba(0, 0, 0, 0.35),
      0 8px 14px rgba(0, 0, 0, 0.2);
  }

  .fab-whatsapp {
    background: linear-gradient(135deg, #25d366, #1ebe5d);
  }

  .fab-call {
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
  }

  .fab i {
    line-height: 1;
  }

  .fab-label {
    position: absolute;
    right: 70px;
    background: rgba(15, 23, 42, 0.95);
    color: #ffffff;
    padding: 8px 12px;
    border-radius: 8px;
    font-size: 13px;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    transform: translateX(10px);
    pointer-events: none;
    transition:
      opacity 0.25s ease,
      transform 0.25s ease;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.35);
  }

  .fab:hover .fab-label {
    opacity: 1;
    transform: translateX(0);
  }

  @media (max-width: 768px) {
    .fab-label {
      display: none;
    }
  }
</style>

<main class="main">
  <!-- Category Carousel -->
  <ShopBy />

  <!-- Product Carousel -->
  <CarouselProducts />

  <!-- FLOATING CONTACT BUTTONS -->
  <div class="floating-actions">
    <!-- WhatsApp -->
    <a
      href="https://wa.me/254762790513?text=Hello%2C%20I'm%20interested%20in%20your%20products"
      target="_blank"
      rel="noopener noreferrer"
      class="fab fab-whatsapp"
      aria-label="Chat on WhatsApp"
    >
      <span class="fab-label">Chat on WhatsApp</span>
      <i class="fa-brands fa-whatsapp"></i>
    </a>

    <!-- Call -->
    <a href="tel:+254720202167" class="fab fab-call" aria-label="Call us">
      <span class="fab-label">+254720202167</span>
      <i class="fa-solid fa-phone"></i>
    </a>
  </div>
</main>

<Latest />

<h1 class="smartphones">Get Your Dream Smartphone today on Lipa Mdogo Mdogo</h1>

<div class="set">
  <ListedProducts />
</div>
