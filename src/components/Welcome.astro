---
import ProductCard from "./ProductCard.astro";
import { products } from "../data/product2.js";
import ShopBy from "./ShopBy.astro";
import CarouselProducts from "./CarouselProducts.astro";
import Latest from "./Latest.astro";
---

<style is:inline>
  :root {
    --dark-color: #161616;
    --accent-color: #ff5151;
  }

  body {
    margin: 2rem 0 0 0;
    background-color: #fff;
    color: var(--dark-color);
    width: 100vw;
    overflow-x: hidden;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .main {
    padding: 2rem 0;
    margin-top: 40px;
  }

  .smartphones {
    text-align: center;
    font-size: 20px;
    margin-bottom: -50px;
  }

  .whatsapp {
    width: 100px;
    height: 50px;
    position: fixed;
    bottom: 20px;
    right: 10px;
    padding: 12px 15px;
    border-radius: 20px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    z-index: 999;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .message {
    display: flex;
    width: 60px;
  }

  .message h1 {
    font-size: 10px;
    margin: auto;
  }

  .item {
    padding: 10px;
  }

  .set {
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 20px;
    /* background: red; */
  }

  @media (max-width: 1024px) {
    .set {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding: 20px;
    }
  }

  @media (max-width: 768px) {
    .set {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding: 20px;
    }
  }

  @media screen and (min-width: 1200px) {
    body {
      margin: 3rem 0 0 0;
    }
    .set {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
      padding: 100px;
    }
  }
</style>

<main class="main">
  <!-- Category Carousel -->
  <ShopBy />

  <!-- Product Carousel -->
  <CarouselProducts />

  <div class="whatsapp">
    <a
      href="https://wa.me/254762790513?text=Hello%2C%20I'm%20interested%20in%20your%20products"
      target="_blank"
      rel="noopener noreferrer"
      style="background-color: #25D366; color: white; padding: 8px 12px; border-radius: 50%; box-shadow: 0 2px 6px rgba(0,0,0,0.2); font-size: 24px; z-index: 999;"
      aria-label="Chat with us on WhatsApp"
    >
      <i class="fa-brands fa-whatsapp" aria-hidden="true"></i>
    </a>

    <div class="message">
      <h1>Chat</h1>
    </div>
  </div>
</main>
<Latest />

<h1 class="smartphones">Get Your Dream Smartphone today on Lipa Mdogo Mdogo</h1>
<div class="set">
  {
    products.map((product, index) => (
      <div class="item">
        <ProductCard {...product} index={index} />
      </div>
    ))
  }
</div>
