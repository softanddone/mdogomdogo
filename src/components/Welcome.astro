  <style>
  /* @import url("https://fonts.googleapis.com/css?family=Open+Sans:400,700&display=swap"); */

/* Variables */
:root {
  --first-color: #e3f8ff;
  --second-color: #dcfafb;
  --third-color: #ffe8df;
  --accent-color: #ff5151;
  --dark-color: #161616;

  --body-font: "Open Sans";
  --h1-font-size: 1.5rem;
  --normal-font-size: 0.938rem;
  --smaller-font-size: 0.75rem;
}

@media screen and (min-width: 768px) {
  :root {
    --h1-font-size: 2rem;
    --normal-font-size: 1rem;
    --smaller-font-size: 0.813rem;
  }
}

/* Base styles */
*,
::after,
::before {
  box-sizing: border-box;
}
body {
  margin: 2rem 0 0 0;
  background-color: #fff;
  color: var(--dark-color);
  font-family: var(--body-font);
  width: 100vw;
  overflow-x: hidden;
}
img {
  max-width: 100%;
  height: auto;
}

/* Layout */
.main {
  padding: 2rem 0;
}
.bd-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  max-width: 1200px;
  margin: 0 2.5rem;
  align-items: center;
  gap: 2rem;
}
.whatsapp{
  /* background: red!important; */
  z-index: 2;
  width:120px;
  height: 50px;
  position: fixed; 
  bottom: 20px; 
  right: 10px; 
  /* background-color: #25D366;  */
  /* color: white;  */
  padding: 12px 15px; 
  border-radius: 20px; 
  box-shadow: 0 2px 6px rgba(0,0,0,0.2); 
  text-decoration: none; 
  font-size: 24px; 
  z-index: 999;
  display: grid;
  grid-template-columns: 1fr 3fr;
}

.message{
  display: flex;
  width:60px;
}
.message h1{
  font-size: 10px;
  margin: auto;
}
/* Card */
.card {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1.5rem 2rem 4rem 2rem;
  border-radius: 1rem;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
}
.card__img {
  width: 180px;
  padding: 3rem 0;
  transition: transform 0.3s ease;
}
.card__name {
  position: absolute;
  left: 0;
  bottom: -3rem;
  width: 100%;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--dark-color);
  color: #fff;
  font-weight: bold;
  font-size: var(--smaller-font-size);
  transition: bottom 0.3s ease;
  z-index: 10;
}
.card__name p {
  margin: 0;
  letter-spacing: 0.5px;
}
.card__icon {
  font-size: 1.5rem;
  color: var(--dark-color);
  transition: color 0.2s ease, transform 0.2s ease;
  padding: 0.5rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.card__icon:hover {
  color: var(--accent-color);
  transform: scale(1.1);
}
.card__precis {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: auto;
}

/* Hover effects */
.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
}
.card:hover .card__name {
  bottom: 0;
}
.card:hover .card__img {
  transform: translateY(-5px);
}

/* Footer */
footer {
  text-align: center;
  margin-top: 3rem;
  padding: 2rem;
  color: var(--dark-color);
  opacity: 0.7;
}
footer a {
  color: var(--dark-color);
  transition: color 0.3s ease;
}
footer a:hover {
  color: var(--accent-color);
}

/* Responsive fix */
@media screen and (min-width: 1200px) {
  body {
    margin: 3rem 0 0 0;
  }
  .bd-grid {
    margin-left: auto;
    margin-right: auto;
  }
}

