---
export const prerender = true;

import ProductLayout from "../layouts/ProductLayout.astro";
import Display from "../components/Display.astro";
import ProductCard from "../components/ProductCard.astro";
import Nav from "../components/Nav.astro";
import Gift from "../components/Gift.astro";
import { products } from "../data/product2";

export async function getStaticPaths() {
  return products.map((product) => ({
    params: { slug: product.slug },
  }));
}

const { slug } = Astro.params;
const currentProduct = products.find((p) => p.slug === slug);

if (!currentProduct) {
  return Astro.redirect("/404");
}

// ============================================================================
// RELATED PRODUCTS - Business Logic Only
// ============================================================================
const relatedProducts = products
  .filter(
    (p) =>
      p.id !== currentProduct.id &&
      (p.brand === currentProduct.brand ||
        p.categoryPath.some((cat) => currentProduct.categoryPath.includes(cat)))
  )
  .slice(0, 4);

// ============================================================================
// BREADCRUMBS - Single Source of Truth (matches schema in ProductLayout)
// ============================================================================
const breadcrumbs = [
  { name: "Home", url: "https://mdogomdogodeals.co.ke" },
  { name: "Mobile Phones", url: "https://mdogomdogodeals.co.ke/phones" },
  {
    name: currentProduct.brand,
    url: `https://mdogomdogodeals.co.ke/${currentProduct.brand.toLowerCase()}`,
  },
  { name: currentProduct.name, current: true },
];

// ============================================================================
// FAQ DATA - Single Source of Truth (will match schema)
// ============================================================================
const faqs = [
  {
    question: `How does the credit payment work for ${currentProduct.name}?`,
    answer: `Pay ${currentProduct.deposit} deposit, then ${currentProduct.daily} daily until fully paid. No hidden fees.`,
  },
  {
    question: "Is delivery free in Nairobi?",
    answer:
      "Yes, we offer free same-day delivery within Nairobi CBD. Outer areas may have a small delivery fee. We deliver throughout Kenya.",
  },
  {
    question: "What if I miss a payment?",
    answer:
      "Contact your provider immediately. Most offer flexible payment options and will work with you to find a solution.",
  },
  {
    question: `Is the ${currentProduct.name} genuine?`,
    answer: `Yes, all our ${currentProduct.name} phones are 100% genuine with warranty. We source directly from authorized distributors in Kenya.`,
  },
  {
    question: `What colors are available for ${currentProduct.name}?`,
    answer: `The ${currentProduct.name} is available in: ${currentProduct.color}. Choose your favorite when ordering.`,
  },
  {
    question: "What about warranty and support?",
    answer: `All phones come with manufacturer warranty. You'll get full support from both ${currentProduct.brand} and ${currentProduct.seller}.`,
  },
];

// ============================================================================
// FAQ SCHEMA - Generated from FAQ data to ensure perfect match
// ============================================================================
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};

// ============================================================================
// PASS EVERYTHING TO LAYOUT - Let it handle all schema generation
// ============================================================================
// ProductLayout will generate: Product, Organization, Breadcrumb, ReturnPolicy
// We only add FAQ schema here since it's page-specific
---

<ProductLayout product={currentProduct} additionalSchemas={[faqSchema]}>
  <Gift />
  <Nav />

  <!-- Breadcrumb Navigation - Matches schema exactly -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <div class="breadcrumb-container">
      <ol
        class="breadcrumb-list"
        itemscope
        itemtype="https://schema.org/BreadcrumbList"
      >
        {
          breadcrumbs.map((crumb, index) => (
            <li
              class="breadcrumb-item"
              itemprop="itemListElement"
              itemscope
              itemtype="https://schema.org/ListItem"
            >
              {crumb.current ? (
                <>
                  <span aria-current="page" itemprop="name">
                    {crumb.name}
                  </span>
                  <meta itemprop="position" content={(index + 1).toString()} />
                </>
              ) : (
                <>
                  <a href={crumb.url} itemprop="item">
                    <span itemprop="name">{crumb.name}</span>
                  </a>
                  <meta itemprop="position" content={(index + 1).toString()} />
                  {index < breadcrumbs.length - 1 && (
                    <span class="separator">›</span>
                  )}
                </>
              )}
            </li>
          ))
        }
      </ol>
    </div>
  </nav>

  <!-- Main Product Display -->
  <Display {...currentProduct} />

  <!-- Product Details Section -->
  {
    currentProduct.details && currentProduct.details.length > 0 && (
      <section class="product-details">
        {currentProduct.details.map((section) => (
          <article class="detail-section">
            <h2>{section.title}</h2>
            {section.content && <p>{section.content}</p>}

            {section.pros && (
              <div class="pros">
                <h3>Pros</h3>
                <ul>
                  {section.pros.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            )}

            {section.cons && (
              <div class="cons">
                <h3>Cons</h3>
                <ul>
                  {section.cons.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            )}
          </article>
        ))}
      </section>
    )
  }

  <!-- Related Products -->
  {
    relatedProducts.length > 0 && (
      <section class="related-products">
        <div class="related-container">
          <h2 class="related-title">You Might Also Like</h2>
          <div class="related-grid">
            {relatedProducts.map((product) => (
              <ProductCard {...product} />
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- FAQ Section - Matches schema exactly -->
  <section class="faq-section" itemscope itemtype="https://schema.org/FAQPage">
    <div class="faq-container">
      <h2 class="faq-title">Frequently Asked Questions</h2>
      <div class="faq-grid">
        {
          faqs.map((faq) => (
            <div
              class="faq-item"
              itemscope
              itemprop="mainEntity"
              itemtype="https://schema.org/Question"
            >
              <h3 class="faq-question" itemprop="name">
                {faq.question}
              </h3>
              <div
                itemscope
                itemprop="acceptedAnswer"
                itemtype="https://schema.org/Answer"
              >
                <p class="faq-answer" itemprop="text">
                  {faq.answer}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</ProductLayout>

<style>
  /* Breadcrumb Styles */
  .breadcrumb {
    background: #f8fafc;
    padding: 1rem 0;
    border-bottom: 1px solid #e2e8f0;
    margin-bottom: 2rem;
  }

  .breadcrumb-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.875rem;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-item a {
    color: #3b82f6;
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb-item a:hover {
    color: #1d4ed8;
    text-decoration: underline;
  }

  .breadcrumb-item span[aria-current="page"] {
    color: #64748b;
    font-weight: 500;
  }

  .separator {
    color: #94a3b8;
    font-weight: 300;
  }

  /* Product Details */
  .product-details {
    max-width: 850px;
    margin: 3rem auto;
    padding: 1rem 2rem;
    background: #fff;
    line-height: 1.7;
  }

  .detail-section {
    margin-bottom: 2.5rem;
  }

  .detail-section h2 {
    font-size: 1.35rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: #000;
    border-bottom: 2px solid #f2f2f2;
    padding-bottom: 0.4rem;
  }

  .detail-section p {
    font-size: 1rem;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .pros,
  .cons {
    margin-top: 1.2rem;
    padding: 1rem 1.25rem;
    background: #fafafa;
    border: 1px solid #eee;
    border-radius: 6px;
  }

  .pros h3,
  .cons h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #000;
  }

  .pros ul,
  .cons ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .pros li,
  .cons li {
    padding: 0.3rem 0 0.3rem 1.5rem;
    position: relative;
    font-size: 0.97rem;
    color: #333;
  }

  .pros li::before {
    content: "✔";
    color: #28a745;
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .cons li::before {
    content: "✖";
    color: #e63946;
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  /* Related Products */
  .related-products {
    padding: 4rem 0;
    background: #f8fafc;
    margin-top: 2rem;
  }

  .related-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .related-title {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: #1e293b;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  /* FAQ Section */
  .faq-section {
    padding: 4rem 0;
    background: white;
  }

  .faq-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .faq-title {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: #1e293b;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .faq-item {
    background: #f8fafc;
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid #e2e8f0;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .faq-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .faq-question {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 1rem;
  }

  .faq-answer {
    color: #64748b;
    line-height: 1.6;
    margin: 0;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .related-grid,
    .faq-grid {
      grid-template-columns: 1fr;
    }

    .breadcrumb-container,
    .related-container,
    .faq-container {
      padding: 0 1rem;
    }

    .breadcrumb-list {
      font-size: 0.8rem;
    }

    .related-title,
    .faq-title {
      font-size: 1.75rem;
    }

    .product-details {
      padding: 1rem;
    }

    .detail-section h2 {
      font-size: 1.2rem;
    }
  }

  @media screen and (max-width: 480px) {
    .related-products,
    .faq-section {
      padding: 3rem 0;
    }

    .faq-item {
      padding: 1.25rem;
    }
  }
</style>
