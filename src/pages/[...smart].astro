---
import Nav from "../components/Nav.astro";
import TvProductLayout from "../layouts/TvProductLayout.astro";
import ProductCard from "../components/ProductCard.astro";
import { products } from "../data/tvproducts";
import DisplayTv from "../components/DisplayTv.astro";
import Gift from "../components/Gift.astro";

export async function getStaticPaths() {
  const paths = products.map((product) => ({
    params: { smart: product.slug },
  }));
  return paths;
}

const { smart } = Astro.params;
const currentProduct = products.find((product) => product.slug === smart);

if (!currentProduct) {
  throw new Error(`Product not found: ${smart}`);
}

const relatedProducts = products
  .filter(
    (product) =>
      product.id !== currentProduct.id &&
      (product.brand === currentProduct.brand ||
        product.categoryPath.some((cat) =>
          currentProduct.categoryPath.includes(cat)
        ))
  )
  .slice(0, 4);

// ============================================================================
// ADDITIONAL SCHEMAS - Pass to Layout
// ============================================================================
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: `How does the credit payment work for ${currentProduct.name}?`,
      acceptedAnswer: {
        "@type": "Answer",
        text: `Pay ${currentProduct.deposit} deposit, then ${currentProduct.daily} daily until fully paid. Total price is ${currentProduct.totalPrice}. Available through ${currentProduct.seller}.`,
      },
    },
    {
      "@type": "Question",
      name: "Is delivery free in Nairobi?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Yes, we offer free same-day delivery within Nairobi. Outer areas may have a small fee. Delivery available countrywide.",
      },
    },
    {
      "@type": "Question",
      name: `Is the ${currentProduct.name} genuine?`,
      acceptedAnswer: {
        "@type": "Answer",
        text: `Yes, all ${currentProduct.brand} TVs sold are 100% genuine with manufacturer warranty and support.`,
      },
    },
    {
      "@type": "Question",
      name: "What about warranty and support?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "All TVs come with official warranty from Samsung Kenya. After-sales support available through authorized centers.",
      },
    },
  ],
};
---

<TvProductLayout product={currentProduct} additionalSchemas={[faqSchema]}>
  <Gift />
  <Nav />

  <!-- Main Product Display -->
  <DisplayTv {...currentProduct} />

  <!-- Product Details Section -->
  <section class="product-details">
    {
      currentProduct.details &&
        currentProduct.details.map((section) => (
          <article class="detail-section">
            <h2>{section.title}</h2>

            {section.content && <p>{section.content}</p>}

            {section.pros && (
              <div class="pros">
                <h3>Pros</h3>
                <ul>
                  {section.pros.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            )}

            {section.cons && (
              <div class="cons">
                <h3>Cons</h3>
                <ul>
                  {section.cons.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            )}
          </article>
        ))
    }
  </section>

  <!-- Related TVs -->
  {
    relatedProducts.length > 0 && (
      <section class="related-products">
        <div class="related-container">
          <h2 class="related-title">You Might Also Like</h2>
          <div class="related-grid">
            {relatedProducts.map((relatedProduct) => (
              <ProductCard {...relatedProduct} />
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="faq-container">
      <h2 class="faq-title">Frequently Asked Questions</h2>
      <div class="faq-grid">
        <div class="faq-item">
          <h3 class="faq-question">How does the payment plan work?</h3>
          <p class="faq-answer">
            Pay {currentProduct.deposit} deposit and {currentProduct.daily} daily
            until the total {currentProduct.totalPrice} is completed.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">Does it support streaming apps?</h3>
          <p class="faq-answer">
            Yes! The {currentProduct.name} runs on {currentProduct.version} and supports
            Netflix, YouTube, Showmax, and more.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">Is wall-mounting possible?</h3>
          <p class="faq-answer">
            Yes, the TV comes with wall-mount support and a standard stand in
            the box.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">What's included in the box?</h3>
          <p class="faq-answer">
            Includes the {currentProduct.name}, remote control, user manual, and
            power cable.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">What warranty does it have?</h3>
          <p class="faq-answer">
            All {currentProduct.brand} TVs include official warranty and support from
            authorized Samsung centers in Kenya.
          </p>
        </div>
      </div>
    </div>
  </section>
</TvProductLayout>

<style>
  /* Product Details Section */
  .product-details {
    max-width: 1200px;
    margin: 3rem auto;
    padding: 0 1rem;
  }

  .detail-section {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .detail-section h2 {
    color: #1a202c;
    font-size: 1.75rem;
    margin-bottom: 1rem;
    border-bottom: 3px solid #f59e0b;
    padding-bottom: 0.5rem;
  }

  .detail-section p {
    color: #4a5568;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .pros,
  .cons {
    margin-top: 1.5rem;
  }

  .pros h3 {
    color: #059669;
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .cons h3 {
    color: #dc2626;
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .pros ul,
  .cons ul {
    list-style: none;
    padding: 0;
  }

  .pros li,
  .cons li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: #4a5568;
  }

  .pros li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: #059669;
    font-weight: bold;
  }

  .cons li::before {
    content: "✗";
    position: absolute;
    left: 0;
    color: #dc2626;
    font-weight: bold;
  }

  /* Related Products Section */
  .related-products {
    background: #f7fafc;
    padding: 3rem 0;
    margin-top: 3rem;
  }

  .related-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .related-title {
    font-size: 2rem;
    color: #1a202c;
    margin-bottom: 2rem;
    text-align: center;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  /* FAQ Section */
  .faq-section {
    max-width: 1200px;
    margin: 3rem auto;
    padding: 0 1rem;
  }

  .faq-container {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .faq-title {
    font-size: 2rem;
    color: #1a202c;
    margin-bottom: 2rem;
    text-align: center;
    border-bottom: 3px solid #f59e0b;
    padding-bottom: 1rem;
  }

  .faq-grid {
    display: grid;
    gap: 2rem;
  }

  .faq-item {
    padding: 1.5rem;
    border-left: 4px solid #f59e0b;
    background: #fef5e7;
    border-radius: 8px;
    transition: transform 0.2s;
  }

  .faq-item:hover {
    transform: translateX(8px);
  }

  .faq-question {
    color: #1a202c;
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .faq-answer {
    color: #4a5568;
    line-height: 1.8;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .detail-section {
      padding: 1.5rem;
    }

    .detail-section h2 {
      font-size: 1.5rem;
    }

    .related-title,
    .faq-title {
      font-size: 1.5rem;
    }

    .faq-container {
      padding: 2rem 1.5rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
