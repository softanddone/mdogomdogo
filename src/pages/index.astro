---
import ProductCard from "../components/ProductCard.astro";
import { products } from "../data/products.js";
---
<html lang="en">
  <head>
    <title>Lipa Mdogo Mdogo Phones</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        font-family: sans-serif;
        margin: 0;
        padding: 0;

      }
      header {
        background: #000;
        color: white;
        padding: 1rem;
        text-align: center;
      }
      .hero {
        padding: 2rem;
        background: #f9f9f9;
        text-align: center;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        padding: 2rem;
      }
      footer {
        text-align: center;
        padding: 1rem;
        background: #eee;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Lipa Mdogo Mdogo Phones</h1>
    </header>

    <section class="hero">
      <h2>Affordable Phones on Easy Payment</h2>
      <p>Pay a small deposit and clear the balance as you go (Free Week Free).</p>
    </section>

    <section class="grid">
      {products.map(product => <ProductCard {...product} />)}
    </section>

    <footer>
      <p>Â© {new Date().getFullYear()} Lipa Mdogo Mdogo Deals</p>
    </footer>
  </body>
</html>
