---
// src/pages/products/[slug].astro
import Nav from "../../components/Nav.astro";
import Layout from "../../layouts/Layout.astro";
import Display from "../../components/Display.astro";
import ProductCard from "../../components/ProductCard.astro";
import { products } from "../../data/product2";
import {
  generateProductSchema,
  generateBreadcrumbSchema,
} from "../../utils/structureData";

export async function getStaticPaths() {
  // Generate paths for all products using their slugs
  const paths = products.map((product) => ({
    params: {
      p: product.slug,
    },
  }));

  return paths;
}

const { p } = Astro.params;

// Find the current product by slug
const currentProduct = products.find((product) => product.slug === p);

