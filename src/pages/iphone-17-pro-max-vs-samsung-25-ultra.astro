    <script>
      // Enhanced score calculation and winner determination
      function calculateScores() {
        const features = document.querySelectorAll(".feature-value.winner");
        let iphoneScore = 0;
        let samsungScore = 0;

        features.forEach((feature) => {
          if (feature.classList.contains("iphone")) {
            iphoneScore++;
          } else if (feature.classList.contains("samsung")) {
            samsungScore++;
          }
        });

        // Add visual feedback during calculation
        const scoreDisplay = document.querySelector(".score-display");
        if (scoreDisplay) {
          const scoreElement = scoreDisplay;
          scoreElement.style.transform = "scale(1.05)";
          setTimeout(() => {
            scoreElement.style.transform = "scale(1)";
          }, 500);
        }

        // Animate score counting with improved easing
        animateScore("iphone-score", iphoneScore);
        animateScore("samsung-score", samsungScore);

        // Determine and display winner with delay for dramatic effect
        setTimeout(() => {
          displayWinner(iphoneScore, samsungScore);
        }, 2500);
      }

      function animateScore(elementId, targetScore) {
        const element = document.getElementById(elementId);
        if (!element) return;

        let currentScore = 0;
        const duration = 2000; // 2 seconds
        const steps = 60;
        const increment = targetScore / steps;
        const stepDuration = duration / steps;

        const timer = setInterval(() => {
          currentScore += increment;
          if (currentScore >= targetScore) {
            currentScore = targetScore;
            clearInterval(timer);
            // Add celebration effect for final score
            element.style.transform = "scale(1.2)";
            setTimeout(() => {
              element.style.transform = "scale(1)";
            }, 300);
          }
          element.textContent = Math.floor(currentScore).toString();
        }, stepDuration);
      }

      function displayWinner(iphoneScore, samsungScore) {
        const winnerBanner = document.getElementById("winner-banner");
        const winnerTitle = document.getElementById("winner-title");
        const winnerText = document.getElementById("winner-text");
        const winnerPhone = document.getElementById("winner-phone");
        const runnerUpPhone = document.getElementById("runner-up-phone");
        const winnerBuyButton = document.getElementById("winner-buy-button");
        const runnerUpBuyButton = document.getElementById(
          "runner-up-buy-button"
        );

        if (
          !winnerBanner ||
          !winnerTitle ||
          !winnerText ||
          !winnerPhone ||
          !runnerUpPhone ||
          !winnerBuyButton ||
          !runnerUpBuyButton
        ) {
          console.error("Required elements not found");
          return;
        }

        let winner, runnerUp, winnerLink, runnerUpLink, winnerDescription;

        if (iphoneScore > samsungScore) {
          winner = "iPhone 17 Pro Max";
          runnerUp = "Galaxy S25 Ultra";
          winnerLink = "https://amzn.to/470etVe";
          runnerUpLink = "https://amzn.to/4gTPkPG";
          winnerTitle.textContent = "🏆 iPhone 17 Pro Max Wins!";
          winnerDescription = `Leading with ${iphoneScore} category wins vs ${samsungScore}. Superior display brightness, A19 Pro performance, and advanced camera zoom capabilities make it the clear winner for most users.`;
        } else if (samsungScore > iphoneScore) {
          winner = "Galaxy S25 Ultra";
          runnerUp = "iPhone 17 Pro Max";
          winnerLink = "https://amzn.to/4gTPkPG";
          runnerUpLink = "https://amzn.to/470etVe";
          winnerTitle.textContent = "🏆 Galaxy S25 Ultra Wins!";
          winnerDescription = `Dominating with ${samsungScore} category wins vs ${iphoneScore}. The built-in S Pen, premium titanium build, versatile AI features, and productivity-focused design secure the victory.`;
        } else {
          winnerTitle.textContent = "🤝 It's a Perfect Tie!";
          winnerDescription = `Both phones excel equally with ${iphoneScore} category wins each. Your choice depends on ecosystem preference and specific use cases.`;
          winner = "iPhone 17 Pro Max";
          runnerUp = "Galaxy S25 Ultra";
          winnerLink = "https://amzn.to/470etVe";
          runnerUpLink = "https://amzn.to/4gTPkPG";
        }

        winnerText.textContent = winnerDescription;
        winnerPhone.textContent = winner;
        runnerUpPhone.textContent = runnerUp;

        // Type assertion for anchor elements
        const winnerBtn = winnerBuyButton;
        const runnerBtn = runnerUpBuyButton;

        if (winnerBtn.tagName === "A") {
          winnerBtn.href = winnerLink;
        }
        if (runnerBtn.tagName === "A") {
          runnerBtn.href = runnerUpLink;
        }

        winnerBuyButton.textContent = `🛒 Get ${winner}`;
        runnerUpBuyButton.textContent = `🛒 Choose ${runnerUp}`;

        // Show winner banner with animation
        winnerBanner.style.display = "block";
        winnerBanner.style.opacity = "0";
        winnerBanner.style.transform = "translateY(50px)";

        setTimeout(() => {
          winnerBanner.style.transition =
            "all 0.8s cubic-bezier(0.4, 0, 0.2, 1)";
          winnerBanner.style.opacity = "1";
          winnerBanner.style.transform = "translateY(0)";
          winnerBanner.scrollIntoView({ behavior: "smooth", block: "center" });
        }, 100);
      }

      // Enhanced click tracking with more detailed analytics
      function trackPurchaseIntent(phone, source, price, clickEvent) {
        const timestamp = new Date().toISOString();
        const eventData = {
          phone_model: phone,
          click_source: source,
          price: price,
          timestamp: timestamp,
          user_agent: navigator.userAgent,
          page_url: window.location.href,
        };

        console.log(`Purchase Intent Tracked:`, eventData);

        // Store in session for potential follow-up tracking
        try {
          const existingData = JSON.parse(
            sessionStorage.getItem("phoneComparisonClicks") || "[]"
          );
          existingData.push(eventData);
          sessionStorage.setItem(
            "phoneComparisonClicks",
            JSON.stringify(existingData)
          );
        } catch (e) {
          // Fallback if sessionStorage isn't available
          console.log(
            "SessionStorage not available, using console logging only"
          );
        }

        // Add visual feedback for user
        if (clickEvent && clickEvent.target) {
          const clickedButton = clickEvent.target;
          const originalText = clickedButton.textContent || "";
          clickedButton.textContent = "✓ Redirecting...";
          clickedButton.style.background =
            "linear-gradient(135deg, #22c55e 0%, #16a34a 100%)";

          setTimeout(() => {
            clickedButton.textContent = originalText;
          }, 1000);
        }
      }

      // Add intersection observer for scroll animations
      function initScrollAnimations() {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const target = entry.target;
                target.style.opacity = "1";
                target.style.transform = "translateY(0)";
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: "0px 0px -50px 0px",
          }
        );

        // Observe comparison sections
        document.querySelectorAll(".comparison-section").forEach((section) => {
          const sectionElement = section;
          sectionElement.style.opacity = "0";
          sectionElement.style.transform = "translateY(30px)";
          sectionElement.style.transition =
            "all 0.6s cubic-bezier(0.4, 0, 0.2, 1)";
          observer.observe(section);
        });
      }

      // Enhanced mobile responsiveness check
      function handleResponsiveFeatures() {
        const isMobile = window.innerWidth < 768;
        const phoneCards = document.querySelectorAll(".phone-card");

        if (isMobile) {
          phoneCards.forEach((card) => {
            const cardElement = card;
            cardElement.addEventListener("touchstart", () => {
              cardElement.style.transform = "scale(0.98)";
            });

            cardElement.addEventListener("touchend", () => {
              cardElement.style.transform = "scale(1)";
            });
          });
        }
      }

      // Initialize everything when DOM is loaded
      document.addEventListener("DOMContentLoaded", function () {
        // Add click tracking to all CTA buttons
        const iphoneCta = document.getElementById("iphone-cta");
        const samsungCta = document.getElementById("samsung-cta");

        if (iphoneCta) {
          iphoneCta.addEventListener("click", (e) => {
            trackPurchaseIntent("iPhone 17 Pro Max", "hero_cta", "$1,199", e);
