        }

        if (samsungCta) {
          samsungCta.addEventListener("click", (e) => {
            trackPurchaseIntent("Galaxy S25 Ultra", "hero_cta", "$1,299", e);
          });
        }

        // Initialize scroll animations
        initScrollAnimations();

        // Handle responsive features
        handleResponsiveFeatures();
        window.addEventListener("resize", handleResponsiveFeatures);

        // Calculate scores with a slight delay for better UX
        setTimeout(() => {
          calculateScores();
        }, 1000);

        // Add loading completed class for any additional animations
        setTimeout(() => {
          document.body.classList.add("loaded");
        }, 500);
      });

