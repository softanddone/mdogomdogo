---
import CategoryLayout from "../layouts/CategoryLayout.astro";
import { products } from "../data/product2";
import ProductCard from "../components/ProductCard.astro";
import PopularBrands from "../components/PopularBrands.astro";

export async function getStaticPaths() {
  const allCategories = new Set<string>();

  products.forEach((product) => {
    const categoryPath = product.categoryPath as string[];
    categoryPath.forEach((category) => {
      const slug = category
        .toLowerCase()
        .replace(/\s+/g, "-")
        .replace(/[^\w-]/g, "-")
        .replace(/-+/g, "-")
        .replace(/^-|-$/g, "");
      allCategories.add(slug);
    });
  });

  const categories = Array.from(allCategories);
  const paths = categories.map((category) => ({
    params: { category },
  }));

  return paths;
}

const { category } = Astro.params;

// Filter products
const filteredProducts = products.filter((product) => {
  const categoryPath = product.categoryPath as string[];
  return categoryPath.some((cat) => {
    const slug = cat
      .toLowerCase()
      .replace(/\s+/g, "-")
      .replace(/[^\w-]/g, "-")
      .replace(/-+/g, "-")
      .replace(/^-|-$/g, "");
    return slug === category;
  });
});

if (filteredProducts.length === 0) {
  throw new Error(`No products found in the category: ${category}`);
}

// Get display name
let displayCategory = category;
for (const product of filteredProducts) {
  const categoryPath = product.categoryPath as string[];
  const found = categoryPath.find((cat) => {
    const slug = cat
      .toLowerCase()
      .replace(/\s+/g, "-")
      .replace(/[^\w-]/g, "-")
      .replace(/-+/g, "-")
      .replace(/^-|-$/g, "");
    return slug === category;
  });
  if (found) {
    displayCategory = found;
    break;
  }
}

// Get price range
const prices = filteredProducts.map((p) =>
  parseInt(p.totalPrice.replace(/[^\d]/g, ""))
);
const minPrice = Math.min(...prices);
const maxPrice = Math.max(...prices);

// Props for CategoryLayout
const layoutProps = {
  category: category,
  displayCategory: displayCategory,
  products: filteredProducts,
};
